<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:icons="clr-namespace:WindowsLauncher.UI.Infrastructure.Icons">

    <!-- =============================================== -->
    <!-- КОНВЕРТЕРЫ FONTAWESOME -->
    <!-- =============================================== -->
    
    <!-- Конвертер emoji → FontAwesome элемент -->
    <icons:EmojiToFontAwesomeConverter x:Key="EmojiToFontAwesomeConverter"/>
    
    <!-- Конвертер emoji → FontAwesome иконка (enum) -->
    <icons:EmojiToFontAwesomeIconConverter x:Key="EmojiToFontAwesomeIconConverter"/>
    
    <!-- Конвертер emoji → ImageSource -->
    <icons:EmojiToImageSourceConverter x:Key="EmojiToImageSourceConverter"/>

    <!-- =============================================== -->
    <!-- БАЗОВЫЕ СТИЛИ FONTAWESOME -->
    <!-- =============================================== -->
    
    <!-- Базовый стиль для FontAwesome иконок -->
    <Style x:Key="FontAwesomeIconBase" TargetType="fa:ImageAwesome">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Малая иконка (12px) -->
    <Style x:Key="FontAwesomeIconSmall" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
    </Style>

    <!-- Обычная иконка (16px) -->
    <Style x:Key="FontAwesomeIconNormal" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
    </Style>

    <!-- Большая иконка (20px) -->
    <Style x:Key="FontAwesomeIconLarge" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <!-- Очень большая иконка (24px) -->
    <Style x:Key="FontAwesomeIconExtraLarge" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
    </Style>

    <!-- =============================================== -->
    <!-- КОРПОРАТИВНЫЕ СТИЛИ FONTAWESOME -->
    <!-- =============================================== -->

    <!-- Иконка основного цвета (красный) -->
    <Style x:Key="FontAwesomeIconPrimary" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource CorporateRedBrush}"/>
    </Style>

    <!-- Иконка успеха (зеленый) -->
    <Style x:Key="FontAwesomeIconSuccess" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
    </Style>

    <!-- Иконка предупреждения (оранжевый) -->
    <Style x:Key="FontAwesomeIconWarning" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
    </Style>

    <!-- Иконка опасности (красный) -->
    <Style x:Key="FontAwesomeIconDanger" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
    </Style>

    <!-- Иконка информации (синий) -->
    <Style x:Key="FontAwesomeIconInfo" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource InfoBrush}"/>
    </Style>

    <!-- Белая иконка для темных фонов -->
    <Style x:Key="FontAwesomeIconWhite" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource WhiteTextBrush}"/>
    </Style>

    <!-- Серая иконка (вторичная) -->
    <Style x:Key="FontAwesomeIconSecondary" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
    </Style>

    <!-- Приглушенная иконка -->
    <Style x:Key="FontAwesomeIconMuted" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource MutedTextBrush}"/>
    </Style>

    <!-- =============================================== -->
    <!-- СТИЛИ ДЛЯ КНОПОК С FONTAWESOME ИКОНКАМИ -->
    <!-- =============================================== -->

    <!-- Кнопка с FontAwesome иконкой - основная -->
    <Style x:Key="FontAwesomeButtonPrimary" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- Кнопка с FontAwesome иконкой - вторичная -->
    <Style x:Key="FontAwesomeButtonSecondary" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- Кнопка с FontAwesome иконкой - малая -->
    <Style x:Key="FontAwesomeButtonSmall" TargetType="Button" BasedOn="{StaticResource FontAwesomeButtonSecondary}">
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="MinWidth" Value="24"/>
        <Setter Property="MinHeight" Value="24"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>

    <!-- Кнопка с FontAwesome иконкой - большая -->
    <Style x:Key="FontAwesomeButtonLarge" TargetType="Button" BasedOn="{StaticResource FontAwesomeButtonPrimary}">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="40"/>
    </Style>

    <!-- =============================================== -->
    <!-- TOUCH MODE СТИЛИ (увеличенные для сенсорных экранов) -->
    <!-- =============================================== -->

    <!-- Touch Mode - иконки -->
    <Style x:Key="FontAwesomeIconTouch" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
    </Style>

    <!-- Touch Mode - большие иконки -->
    <Style x:Key="FontAwesomeIconTouchLarge" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
    </Style>

    <!-- Touch Mode - кнопки с иконками -->
    <Style x:Key="FontAwesomeButtonTouch" TargetType="Button" BasedOn="{StaticResource FontAwesomeButtonPrimary}">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="MinWidth" Value="48"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- =============================================== -->
    <!-- ТЕМПЛЕЙТЫ ДЛЯ ЧАСТО ИСПОЛЬЗУЕМЫХ КОМБИНАЦИЙ -->
    <!-- =============================================== -->

    <!-- Темплейт: Иконка + Текст (горизонтально) -->
    <DataTemplate x:Key="IconTextHorizontalTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <ContentPresenter Content="{Binding IconText, Converter={StaticResource EmojiToFontAwesomeConverter}, ConverterParameter=16:CorporateRedBrush}" 
                            Margin="0,0,8,0"/>
            <TextBlock Text="{Binding Text}" VerticalAlignment="Center"/>
        </StackPanel>
    </DataTemplate>

    <!-- Темплейт: Иконка + Текст (вертикально) -->
    <DataTemplate x:Key="IconTextVerticalTemplate">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <ContentPresenter Content="{Binding IconText, Converter={StaticResource EmojiToFontAwesomeConverter}, ConverterParameter=20:CorporateRedBrush}" 
                            HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="{Binding Text}" HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>
    </DataTemplate>

    <!-- Темплейт: Только иконка -->
    <DataTemplate x:Key="IconOnlyTemplate">
        <ContentPresenter Content="{Binding IconText, Converter={StaticResource EmojiToFontAwesomeConverter}, ConverterParameter=16:CorporateRedBrush}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </DataTemplate>

    <!-- =============================================== -->
    <!-- АНИМАЦИИ ДЛЯ FONTAWESOME ИКОНОК -->
    <!-- =============================================== -->

    <!-- Анимация вращения (для loading иконок) -->
    <Storyboard x:Key="FontAwesomeSpinAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                        From="0" To="360" Duration="0:0:2"/>
    </Storyboard>

    <!-- Анимация пульсации -->
    <Storyboard x:Key="FontAwesomePulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1.0" To="0.5" Duration="0:0:1"/>
    </Storyboard>

    <!-- Стиль для вращающейся иконки -->
    <Style x:Key="FontAwesomeIconSpin" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="RenderTransform">
            <Setter.Value>
                <RotateTransform/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Style.Triggers>
            <Trigger Property="IsVisible" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard Storyboard="{StaticResource FontAwesomeSpinAnimation}"/>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для пульсирующей иконки -->
    <Style x:Key="FontAwesomeIconPulse" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Style.Triggers>
            <Trigger Property="IsVisible" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard Storyboard="{StaticResource FontAwesomePulseAnimation}"/>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>