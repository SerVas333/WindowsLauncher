<!-- ComposeEmailWindow.xaml -->
<Window x:Class="WindowsLauncher.UI.Views.ComposeEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:WindowsLauncher.UI.Infrastructure.Localization"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_WindowTitle}" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SurfaceBrush}"
        MinHeight="600" MinWidth="800">

    <!-- Все необходимые ресурсы подключены глобально через App.xaml -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="24,16">
            <StackPanel>
                <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_Title}" 
                           FontSize="24" FontWeight="Light" 
                           Foreground="White" FontFamily="Segoe UI"/>
                <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_Subtitle}" 
                           FontSize="12" Foreground="{StaticResource OnPrimaryBrush}" Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24" Background="{StaticResource SurfaceVariantBrush}">
            <StackPanel>
                
                <!-- Recipients Section -->
                <GroupBox Header="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_RecipientsGroup}" 
                          Style="{StaticResource GroupBoxStyle}"
                          Margin="0,0,0,16">
                    <StackPanel>
                        
                        <!-- To Recipients -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_To}" 
                                     VerticalAlignment="Center" FontWeight="SemiBold" 
                                     Foreground="{StaticResource PrimaryTextBrush}"/>
                            
                            <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource LightGrayBrush}" 
                                  BorderThickness="1" CornerRadius="4" MinHeight="100" Padding="8">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding ToRecipients}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource PrimaryLightBrush}" 
                                                       CornerRadius="12" Padding="8,4" Margin="2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                 Foreground="{StaticResource PrimaryBrush}" 
                                                                 FontWeight="SemiBold" FontSize="12"/>
                                                        <Button Background="Transparent" BorderThickness="0"
                                                              Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.RemoveToRecipientCommand}"
                                                              CommandParameter="{Binding}"
                                                              Width="16" Height="16" Margin="4,0,0,0" Padding="0">
                                                            <fa:ImageAwesome Icon="Times" Width="10" Height="10" 
                                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}"
                                  Command="{Binding SelectToRecipientsCommand}"
                                  ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_SelectRecipientsTooltip}"
                                  Width="40" Height="40" Margin="8,0,0,0">
                                <fa:ImageAwesome Icon="AddressBook" Width="16" Height="16" 
                                               Foreground="{StaticResource PrimaryBrush}"/>
                            </Button>
                        </Grid>

                        <!-- CC Recipients (Optional) -->
                        <Grid Visibility="{Binding ShowCcBcc, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_Cc}" 
                                     VerticalAlignment="Center" FontWeight="SemiBold" 
                                     Foreground="{StaticResource PrimaryTextBrush}"/>
                            
                            <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource LightGrayBrush}" 
                                  BorderThickness="1" CornerRadius="4" MinHeight="60" Padding="8">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding CcRecipients}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource PrimaryLightBrush}" 
                                                       CornerRadius="12" Padding="8,4" Margin="2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                 Foreground="{StaticResource PrimaryBrush}" 
                                                                 FontWeight="SemiBold" FontSize="12"/>
                                                        <Button Background="Transparent" BorderThickness="0"
                                                              Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.RemoveCcRecipientCommand}"
                                                              CommandParameter="{Binding}"
                                                              Width="16" Height="16" Margin="4,0,0,0" Padding="0">
                                                            <fa:ImageAwesome Icon="Times" Width="10" Height="10" 
                                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}"
                                  Command="{Binding SelectCcRecipientsCommand}"
                                  ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_SelectCcRecipientsTooltip}"
                                  Width="40" Height="40" Margin="8,0,0,0">
                                <fa:ImageAwesome Icon="AddressBook" Width="16" Height="16" 
                                               Foreground="{StaticResource PrimaryBrush}"/>
                            </Button>
                        </Grid>

                        <!-- BCC Recipients (Optional) -->
                        <Grid Visibility="{Binding ShowCcBcc, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_Bcc}" 
                                     VerticalAlignment="Center" FontWeight="SemiBold" 
                                     Foreground="{StaticResource PrimaryTextBrush}"/>
                            
                            <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource LightGrayBrush}" 
                                  BorderThickness="1" CornerRadius="4" MinHeight="60" Padding="8">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding BccRecipients}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource PrimaryLightBrush}" 
                                                       CornerRadius="12" Padding="8,4" Margin="2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                 Foreground="{StaticResource PrimaryBrush}" 
                                                                 FontWeight="SemiBold" FontSize="12"/>
                                                        <Button Background="Transparent" BorderThickness="0"
                                                              Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.RemoveBccRecipientCommand}"
                                                              CommandParameter="{Binding}"
                                                              Width="16" Height="16" Margin="4,0,0,0" Padding="0">
                                                            <fa:ImageAwesome Icon="Times" Width="10" Height="10" 
                                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}"
                                  Command="{Binding SelectBccRecipientsCommand}"
                                  ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_SelectBccRecipientsTooltip}"
                                  Width="40" Height="40" Margin="8,0,0,0">
                                <fa:ImageAwesome Icon="AddressBook" Width="16" Height="16" 
                                               Foreground="{StaticResource PrimaryBrush}"/>
                            </Button>
                        </Grid>

                        <!-- Cc/Bcc Toggle Button -->
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                              Command="{Binding ToggleCcBccCommand}"
                              HorizontalAlignment="Left"
                              Visibility="{Binding ShowCcBcc, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="Plus" Width="12" Height="12" 
                                               Foreground="{StaticResource PrimaryBrush}" 
                                               VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_AddCcBcc}"
                                         Foreground="{StaticResource PrimaryBrush}" 
                                         FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </GroupBox>

                <!-- Subject -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_Subject}" 
                             VerticalAlignment="Center" FontWeight="SemiBold" 
                             Foreground="{StaticResource PrimaryTextBrush}"/>
                    
                    <TextBox Grid.Column="1" Style="{StaticResource TextBoxStyle}"
                           Text="{Binding Subject, UpdateSourceTrigger=PropertyChanged}"
                           Padding="12,8"/>
                </Grid>

                <!-- Message Body -->
                <Grid Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_Message}" 
                             FontWeight="SemiBold" 
                             Foreground="{StaticResource PrimaryTextBrush}"
                             Margin="0,0,0,8"/>
                    
                    <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource LightGrayBrush}" 
                          BorderThickness="1" CornerRadius="4">
                        <TextBox Style="{StaticResource TextBoxStyle}"
                               Text="{Binding MessageBody, UpdateSourceTrigger=PropertyChanged}"
                               TextWrapping="Wrap"
                               AcceptsReturn="True"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Disabled"
                               Padding="12,8"
                               Background="Transparent"
                               BorderThickness="0"/>
                    </Border>
                </Grid>

                <!-- Attachments -->
                <GroupBox Header="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_AttachmentsGroup}" 
                          Style="{StaticResource GroupBoxStyle}"
                          Visibility="{Binding HasAttachments, Converter={StaticResource BooleanToVisibilityConverter}}"
                          Margin="0,0,0,16">
                    <ItemsControl ItemsSource="{Binding Attachments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceVariantBrush}" 
                                       BorderBrush="{StaticResource LightGrayBrush}" 
                                       BorderThickness="1" CornerRadius="4" 
                                       Padding="12,8" Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <fa:ImageAwesome Grid.Column="0" Icon="Paperclip" 
                                                       Width="16" Height="16" 
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="{StaticResource PrimaryTextBrush}"/>
                                            <TextBlock Text="{Binding FormattedSize}" 
                                                     FontSize="11" 
                                                     Foreground="{StaticResource MutedTextBrush}"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" Text="{Binding ContentType}" 
                                                 FontSize="10" 
                                                 Foreground="{StaticResource MutedTextBrush}"
                                                 VerticalAlignment="Center" 
                                                 Margin="8,0"/>
                                        
                                        <Button Grid.Column="3" Style="{StaticResource SecondaryButtonStyle}"
                                              Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.RemoveAttachmentCommand}"
                                              CommandParameter="{Binding}"
                                              ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_RemoveAttachmentTooltip}">
                                            <fa:ImageAwesome Icon="Trash" Width="14" Height="14" 
                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>

                <!-- Add Attachment Button -->
                <Button Style="{StaticResource SecondaryButtonStyle}"
                      Command="{Binding AddAttachmentCommand}"
                      HorizontalAlignment="Left" Width="160" Height="36">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Paperclip" Width="14" Height="14" 
                                       Foreground="{StaticResource PrimaryBrush}" 
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_AddAttachment}"
                                 Foreground="{StaticResource PrimaryBrush}" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </ScrollViewer>

        <!-- Actions -->
        <Border Grid.Row="2" Background="White" BorderThickness="0,1,0,0" 
                BorderBrush="{StaticResource LightGrayBrush}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Send Progress -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                           Visibility="{Binding IsSending, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <fa:ImageAwesome Icon="Spinner" Width="16" Height="16" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,8,0">
                        <fa:ImageAwesome.RenderTransform>
                            <RotateTransform/>
                        </fa:ImageAwesome.RenderTransform>
                        <fa:ImageAwesome.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                       From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </fa:ImageAwesome.Triggers>
                    </fa:ImageAwesome>
                    <TextBlock Text="{Binding SendingStatusMessage}" 
                             Foreground="{StaticResource PrimaryBrush}" 
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                          Command="{Binding SaveDraftCommand}"
                          ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_SaveDraftTooltip}"
                          Width="120" Height="40" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Save" Width="14" Height="14" 
                                           Foreground="{StaticResource PrimaryBrush}" 
                                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_SaveDraft}"
                                     Foreground="{StaticResource PrimaryBrush}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource PrimaryButtonStyle}"
                          Command="{Binding SendEmailCommand}"
                          IsEnabled="{Binding CanSend}"
                          Width="120" Height="40" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="PaperPlane" Width="14" Height="14" 
                                           Foreground="White" 
                                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=ComposeEmail_Send}"
                                     Foreground="White" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}"
                          Command="{Binding CancelCommand}"
                          Width="100" Height="40">
                        <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=Common_Cancel}"
                                 Foreground="{StaticResource PrimaryBrush}" 
                                 VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>