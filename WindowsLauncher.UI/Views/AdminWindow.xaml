<!-- ===== WindowsLauncher.UI/Views/AdminWindow.xaml - ИСПРАВЛЕННАЯ ВЕРСИЯ ===== -->
<Window x:Class="WindowsLauncher.UI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WindowsLauncher.UI"
        xmlns:controls="clr-namespace:WindowsLauncher.UI.Controls"
        xmlns:converters="clr-namespace:WindowsLauncher.UI.Converters"
        Title="Управление приложениями - Администратор" 
        Height="800" Width="1198"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        MinHeight="600" MinWidth="1000">

    <Window.Resources>
        <!-- Конвертеры -->
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="30"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CorporateHeaderGradient}">
            <Grid Margin="24,0,24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/KDV.png" Width="120" Height="32" Margin="0,0,20,0"/>
                    <TextBlock Text="Управление приложениями" 
                               FontSize="20" FontWeight="Light" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Statistics -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="{StaticResource SurfaceVariantBrush}" CornerRadius="15" Padding="15,5,15,5" Margin="5,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Всего: " Foreground="{StaticResource CorporateRedDark}" FontSize="12"/>
                            <TextBlock Text="{Binding TotalApplications}" 
                                       Foreground="{StaticResource CorporateRedDark}" 
                                       FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SurfaceVariantBrush}" CornerRadius="15" Padding="15,5,15,5" Margin="5,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Активных: " Foreground="{StaticResource SuccessBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding EnabledApplications}" 
                                       Foreground="{StaticResource SuccessBrush}" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SurfaceVariantBrush}" CornerRadius="15" Padding="15,5,15,5" Margin="5,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отключенных: " Foreground="{StaticResource ErrorBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding DisabledApplications}" 
                                       Foreground="{StaticResource ErrorBrush}" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Search -->
                <TextBox Grid.Column="2" 
                         Style="{StaticResource CorporateSearchBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Tab Navigation -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource CorporateBorder}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="24,8,24,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Tab Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Приложения"
                            Command="{Binding SwitchToApplicationsCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CorporateCategoryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsUserManagementMode}" Value="False">
                                        <Setter Property="Background" Value="{StaticResource CorporateRed}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Пользователи"
                            Command="{Binding SwitchToUsersCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CorporateCategoryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsUserManagementMode}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource CorporateRed}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Система"
                            Command="{Binding SwitchToSystemCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CorporateCategoryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSystemManagementMode}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource CorporateRed}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Context-specific toolbar -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Application Management Toolbar -->
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding IsUserManagementMode, Converter={StaticResource InverseBoolToVisConverter}}">
                        <Button Command="{Binding AddApplicationCommand}"
                                Style="{StaticResource CorporateButton}"
                                Visibility="{Binding IsViewMode, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➕" Margin="0,0,8,0"/>
                                <TextBlock Text="Добавить приложение"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding RefreshCommand}"
                                Style="{StaticResource CorporateButtonSecondary}"
                                Visibility="{Binding IsViewMode, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" Margin="0,0,8,0"/>
                                <TextBlock Text="Обновить"/>
                            </StackPanel>
                        </Button>

                        <Separator Width="1" Height="30" Margin="10,0,10,0" Background="{StaticResource CorporateBorder}"/>

                        <Button Command="{Binding ImportCommand}"
                                Style="{StaticResource CorporateButtonSecondary}"
                                Visibility="{Binding IsViewMode, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" Margin="0,0,8,0"/>
                                <TextBlock Text="Импорт"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ExportCommand}"
                                Style="{StaticResource CorporateButtonSecondary}"
                                Visibility="{Binding IsViewMode, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" Margin="0,0,8,0"/>
                                <TextBlock Text="Экспорт"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- User Management Toolbar -->
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding IsUserManagementMode, Converter={StaticResource BoolToVisConverter}}">
                        <Button Command="{Binding AddLocalUserCommand}"
                                Style="{StaticResource CorporateButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" Margin="0,0,8,0"/>
                                <TextBlock Text="Добавить пользователя"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding LoadLocalUsersCommand}"
                                Style="{StaticResource CorporateButtonSecondary}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" Margin="0,0,8,0"/>
                                <TextBlock Text="Обновить"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Edit mode buttons (for applications) -->
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                        <Button Command="{Binding SaveCommand}"
                                Style="{StaticResource CorporateButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💾" Margin="0,0,8,0"/>
                                <TextBlock Text="Сохранить"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding CancelEditCommand}"
                                Style="{StaticResource CorporateButtonSecondary}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="❌" Margin="0,0,8,0"/>
                                <TextBlock Text="Отмена"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding TestApplicationCommand}"
                                Style="{StaticResource CorporateButtonSecondary}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▶️" Margin="0,0,8,0"/>
                                <TextBlock Text="Тест запуска"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <!-- Applications Management Panel -->
            <Grid Visibility="{Binding IsUserManagementMode, Converter={StaticResource InverseBoolToVisConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500" MinWidth="400"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                </Grid.ColumnDefinitions>

                <!-- Applications List -->
            <Border Grid.Column="0" Background="White" Margin="24,24,0,24" 
                    CornerRadius="8" BorderThickness="1" 
                    BorderBrush="{StaticResource CorporateBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" Background="{StaticResource CorporateGrayDark}" 
                            CornerRadius="8,8,0,0" Padding="16,12,16,12">
                        <TextBlock Text="Список приложений" FontWeight="SemiBold" 
                                   Foreground="{StaticResource CorporateText}"/>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding ApplicationsView}"
                              SelectedItem="{Binding SelectedApplication}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              Background="Transparent"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              EnableRowVirtualization="True"
                              VirtualizingPanel.IsVirtualizing="True">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource CorporateBorder}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="8,8,8,8"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- Status -->
                            <DataGridTemplateColumn Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Width="10" Height="10" CornerRadius="5"
                                                HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Name -->
                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding Name}" 
                                                Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Category -->
                            <DataGridTextColumn Header="Категория" 
                                                Binding="{Binding Category}" 
                                                Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource CorporateTextMuted}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Type -->
                            <DataGridTextColumn Header="Тип" 
                                                Binding="{Binding TypeDisplay}" 
                                                Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource CorporateTextMuted}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Minimum Role -->
                            <DataGridTextColumn Header="Мин. роль" 
                                                Binding="{Binding RoleDisplay}" 
                                                Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource CorporateRed}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Actions -->
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="✏️" 
                                                    ToolTip="Редактировать"
                                                    Command="{Binding DataContext.EditApplicationCommand, 
                                                            RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Padding="4,4,4,4"
                                                    Margin="2,0,2,0"/>
                                            <Button Content="📋" 
                                                    ToolTip="Дублировать"
                                                    Command="{Binding DataContext.DuplicateApplicationCommand, 
                                                            RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Padding="4,4,4,4"
                                                    Margin="2,0,2,0"/>
                                            <Button Content="🗑️" 
                                                    ToolTip="Удалить"
                                                    Command="{Binding DataContext.DeleteApplicationCommand, 
                                                            RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Padding="4,4,4,4"
                                                    Margin="2,0,2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="{StaticResource CorporateBorder}" Opacity="0.5"/>

            <!-- Details/Edit Panel -->
            <Border Grid.Column="2" Background="White" Margin="0,24,24,24" 
                    CornerRadius="8" BorderThickness="1" 
                    BorderBrush="{StaticResource CorporateBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <Border Grid.Row="0" Background="{StaticResource CorporateGrayDark}" 
                            CornerRadius="8,8,0,0" Padding="16,12,16,12">
                        <TextBlock FontWeight="SemiBold" 
                                   Foreground="{StaticResource CorporateText}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Детали приложения"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                            <Setter Property="Text" Value="Редактирование приложения"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsEditMode}" Value="True"/>
                                                <Condition Binding="{Binding EditingApplication.IsNew}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Text" Value="Создание нового приложения"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                    <!-- Details Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding EditingApplication, 
                                             Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid Margin="24,24,24,24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Basic Information -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="Основная информация" 
                                       FontWeight="SemiBold" FontSize="14"
                                       Foreground="{StaticResource CorporateRed}"
                                       Margin="0,0,0,16"/>

                            <!-- Name -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Название:" 
                                       VerticalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding EditingApplication.Name, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="{Binding IsViewMode}"
                                     Margin="0,0,0,12"/>

                            <!-- Description -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Описание:" 
                                       VerticalAlignment="Top" Margin="0,6,0,12"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding EditingApplication.Description, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="{Binding IsViewMode}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="60"
                                     Margin="0,0,0,12"/>

                            <!-- Category -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Категория:" 
                                       VerticalAlignment="Center" Margin="0,0,0,12"/>
                            <ComboBox Grid.Row="3" Grid.Column="1" 
                                      ItemsSource="{Binding AvailableCategories}"
                                      Text="{Binding EditingApplication.Category}"
                                      IsEditable="True"
                                      IsEnabled="{Binding IsEditMode}"
                                      Margin="0,0,0,12"/>

                            <!-- Type -->
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="Тип:" 
                                       VerticalAlignment="Center" Margin="0,0,0,12"/>
                            <ComboBox Grid.Row="4" Grid.Column="1" 
                                      ItemsSource="{Binding AvailableTypes}"
                                      SelectedItem="{Binding EditingApplication.Type}"
                                      IsEnabled="{Binding IsEditMode}"
                                      Margin="0,0,0,12">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}" Value="Desktop">
                                                            <Setter Property="Text" Value="Приложение"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value="Web">
                                                            <Setter Property="Text" Value="Веб-ссылка"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value="Folder">
                                                            <Setter Property="Text" Value="Папка"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Executable Path -->
                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                       Text="Путь:" 
                                       VerticalAlignment="Center" Margin="0,0,0,12"/>
                            <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" 
                                         Text="{Binding EditingApplication.ExecutablePath, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="{Binding IsViewMode}"/>
                                <Button Grid.Column="1" Content="..." 
                                        Width="30" Margin="4,0,0,0"
                                        IsEnabled="{Binding IsEditMode}"
                                        Click="BrowseExecutablePath_Click"/>
                            </Grid>

                            <!-- Arguments -->
                            <TextBlock Grid.Row="6" Grid.Column="0" 
                                       Text="Аргументы:" 
                                       VerticalAlignment="Center" Margin="0,0,0,24"/>
                            <TextBox Grid.Row="6" Grid.Column="1" 
                                     Text="{Binding EditingApplication.Arguments, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="{Binding IsViewMode}"
                                     Margin="0,0,0,24"/>

                            <!-- Security Settings -->
                            <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="Настройки безопасности" 
                                       FontWeight="SemiBold" FontSize="14"
                                       Foreground="{StaticResource CorporateRed}"
                                       Margin="0,0,0,16"/>

                            <!-- Minimum Role -->
                            <TextBlock Grid.Row="8" Grid.Column="0" 
                                       Text="Минимальная роль:" 
                                       VerticalAlignment="Center" Margin="0,0,0,12"/>
                            <ComboBox Grid.Row="8" Grid.Column="1" 
                                      ItemsSource="{Binding AvailableRoles}"
                                      SelectedItem="{Binding EditingApplication.MinimumRole}"
                                      IsEnabled="{Binding IsEditMode}"
                                      Margin="0,0,0,12">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}" Value="Guest">
                                                            <Setter Property="Text" Value="Гостевой пользователь"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value="Standard">
                                                            <Setter Property="Text" Value="Стандартный"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value="PowerUser">
                                                            <Setter Property="Text" Value="Опытный пользователь"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value="Administrator">
                                                            <Setter Property="Text" Value="Администратор"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Required Groups -->
                            <TextBlock Grid.Row="9" Grid.Column="0" 
                                       Text="Требуемые группы:" 
                                       VerticalAlignment="Top" Margin="0,6,0,12"/>
                            <Grid Grid.Row="9" Grid.Column="1" Margin="0,0,0,12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Add Group -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}"
                                            Margin="0,0,0,8">
                                    <ComboBox Width="200" 
                                              ItemsSource="{Binding AvailableGroups}"
                                              IsEditable="True"
                                              x:Name="GroupComboBox"/>
                                    <Button Content="➕ Добавить" 
                                            Style="{StaticResource CorporateButtonSecondary}"
                                            Margin="8,0,0,0"
                                            Height="39"
                                            Command="{Binding AddGroupCommand}"/>
                                </StackPanel>

                                <!-- Groups List -->
                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding EditingApplication.RequiredGroups}"
                                         MaxHeight="120"
                                         BorderThickness="1"
                                         BorderBrush="{StaticResource CorporateBorder}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8,4,8,4" Margin="2,2,2,2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding}" 
                                                               VerticalAlignment="Center"/>
                                                    <Button Grid.Column="1" 
                                                            Content="❌" 
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Command="{Binding DataContext.RemoveGroupCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                            CommandParameter="{Binding}"
                                                            Visibility="{Binding DataContext.IsEditMode, 
                                                                       RelativeSource={RelativeSource AncestorType=ListBox},
                                                                       Converter={StaticResource BoolToVisConverter}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>

                            <!-- Status -->
                            <TextBlock Grid.Row="10" Grid.Column="0" 
                                       Text="Статус:" 
                                       VerticalAlignment="Center" Margin="0,0,0,12"/>
                            <CheckBox Grid.Row="10" Grid.Column="1" 
                                      Content="Приложение активно"
                                      IsChecked="{Binding EditingApplication.IsEnabled}"
                                      IsEnabled="{Binding IsEditMode}"
                                      Margin="0,0,0,12"/>
                        </Grid>
                    </ScrollViewer>

                    <!-- No Selection Message -->
                    <StackPanel Grid.Row="1" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding EditingApplication, 
                                           Converter={StaticResource InverseNullToVisibilityConverter}}">
                        <TextBlock Text="📋" FontSize="48" 
                                   HorizontalAlignment="Center" 
                                   Foreground="{StaticResource CorporateTextMuted}"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="Выберите приложение для просмотра деталей" 
                                   FontSize="14" 
                                   Foreground="{StaticResource CorporateTextMuted}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            </Grid>

            <!-- User Management Panel -->
            <Grid Visibility="{Binding IsUserManagementMode, Converter={StaticResource BoolToVisConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- User Search Bar -->
                <Border Grid.Row="0" Background="White" Margin="24,24,24,12" 
                        CornerRadius="8" BorderThickness="1" 
                        BorderBrush="{StaticResource CorporateBorder}"
                        Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding UserSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource MaterialTextBoxStyle}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <TextBlock Grid.Column="0"
                                   Text="🔍 Поиск пользователей..."
                                   Foreground="{StaticResource HintBrush}"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserSearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding UserSearchText}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding LocalUsers.Count, StringFormat='Найдено: {0}'}"
                                       Foreground="{StaticResource OnSurfaceVariantBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Users List -->
                <Border Grid.Row="1" Background="White" Margin="24,0,24,24" 
                        CornerRadius="8" BorderThickness="1" 
                        BorderBrush="{StaticResource CorporateBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- List Header -->
                        <Border Grid.Row="0" Background="{StaticResource CorporateGrayDark}" 
                                CornerRadius="8,8,0,0" Padding="16,12,16,12">
                            <TextBlock Text="Локальные пользователи" FontWeight="SemiBold" 
                                       Foreground="{StaticResource CorporateText}"/>
                        </Border>

                        <!-- Users ScrollViewer -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LocalUsers}" Margin="8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <controls:LocalUserCard Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- No Users Message -->
                        <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LocalUsers.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="👥" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{StaticResource CorporateTextMuted}"
                                       Margin="0,0,0,16"/>
                            <TextBlock Text="Локальные пользователи не найдены" 
                                       FontSize="14" 
                                       Foreground="{StaticResource CorporateTextMuted}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Нажмите &quot;Добавить пользователя&quot; для создания первого пользователя" 
                                       FontSize="12" 
                                       Foreground="{StaticResource HintBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- System Management Panel -->
        <Grid Visibility="{Binding IsSystemManagementMode, Converter={StaticResource BoolToVisConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Database Management -->
            <Border Grid.Column="0" Background="White" Margin="24,24,0,24" 
                    CornerRadius="8" BorderThickness="1" 
                    BorderBrush="{StaticResource CorporateBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource CorporateGrayDark}" 
                            CornerRadius="8,8,0,0" Padding="16,12,16,12">
                        <TextBlock Text="🗄️ Управление базой данных" FontWeight="SemiBold" 
                                   Foreground="{StaticResource CorporateText}"/>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>
                            <!-- Database Info -->
                            <GroupBox Header="Информация о базе данных" Margin="0,0,0,16">
                                <Grid Margin="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Тип БД:" FontWeight="SemiBold" Margin="0,0,16,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DatabaseInfo.DatabaseType}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Размер:" FontWeight="SemiBold" Margin="0,0,16,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DatabaseInfo.FormattedSize}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Версия:" FontWeight="SemiBold" Margin="0,0,16,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DatabaseInfo.Version}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Путь:" FontWeight="SemiBold" Margin="0,0,16,8"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DatabaseInfo.Path}" 
                                               TextWrapping="Wrap" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Конфигурация:" FontWeight="SemiBold" Margin="0,0,16,0"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DatabaseInfo.ConfigurationPath}" 
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </GroupBox>

                            <!-- Database Actions -->
                            <GroupBox Header="Операции с базой данных" Margin="0,0,0,0">
                                <StackPanel Margin="8">
                                    <Button Content="🔄 Обновить информацию" 
                                            Command="{Binding RefreshDatabaseInfoCommand}"
                                            Style="{StaticResource CorporateButton}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8"/>
                                    
                                    <Button Content="🗑️ Очистить только базу данных" 
                                            Command="{Binding ClearDatabaseCommand}"
                                            Style="{StaticResource CorporateButtonSecondary}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8"/>
                                    
                                    <Button Content="⚠️ Полная очистка данных приложения" 
                                            Command="{Binding ClearAllDataCommand}"
                                            Style="{StaticResource CorporateButtonDanger}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,0"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Application Management -->
            <Border Grid.Column="2" Background="White" Margin="0,24,24,24" 
                    CornerRadius="8" BorderThickness="1" 
                    BorderBrush="{StaticResource CorporateBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource CorporateGrayDark}" 
                            CornerRadius="8,8,0,0" Padding="16,12,16,12">
                        <TextBlock Text="⚙️ Система и обслуживание" FontWeight="SemiBold" 
                                   Foreground="{StaticResource CorporateText}"/>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>
                            <!-- Version Info -->
                            <GroupBox Header="Информация о версии" Margin="0,0,0,16">
                                <Grid Margin="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Версия:" FontWeight="SemiBold" Margin="0,0,16,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ApplicationVersion}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Сборка:" FontWeight="SemiBold" Margin="0,0,16,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BuildDate}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Версия БД:" FontWeight="SemiBold" Margin="0,0,16,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DatabaseVersion}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Размер данных:" FontWeight="SemiBold" Margin="0,0,16,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TotalDataSize}"/>
                                </Grid>
                            </GroupBox>

                            <!-- System Actions -->
                            <GroupBox Header="Системные операции">
                                <StackPanel Margin="8">
                                    <Button Content="📋 Экспорт конфигурации" 
                                            Command="{Binding ExportConfigurationCommand}"
                                            Style="{StaticResource CorporateButton}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8"/>
                                    
                                    <Button Content="📁 Открыть папку данных" 
                                            Command="{Binding OpenDataFolderCommand}"
                                            Style="{StaticResource CorporateButtonSecondary}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8"/>
                                    
                                    <Button Content="🔧 Диагностика системы" 
                                            Command="{Binding RunDiagnosticsCommand}"
                                            Style="{StaticResource CorporateButtonSecondary}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,0"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource CorporateGrayDark}" 
                BorderBrush="{StaticResource CorporateBorder}" 
                BorderThickness="0,1,0,0">
            <Grid Margin="24,0,24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource CorporateText}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Несохраненные изменения" 
                               Foreground="{StaticResource CorporateRed}"
                               FontWeight="SemiBold"
                               Visibility="{Binding HasUnsavedChanges, 
                                          Converter={StaticResource BoolToVisConverter}}"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding IsEditMode, 
                                    Converter={StaticResource BoolToStringConverter}, 
                                    ConverterParameter='Режим редактирования|Режим просмотра'}"
                               Foreground="{StaticResource CorporateTextMuted}"
                               Margin="0,0,12,0"/>

                    <!-- Virtual Keyboard Button -->
                    <Button x:Name="VirtualKeyboardButton" 
                            Content="⌨️"
                            ToolTip="Виртуальная клавиатура"
                            Width="28" Height="24" FontSize="12" Padding="0"
                            Click="VirtualKeyboardButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CorporateButtonSecondary}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource CorporateBorder}"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>