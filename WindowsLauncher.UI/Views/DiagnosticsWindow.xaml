<Window x:Class="WindowsLauncher.UI.Views.DiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Диагностика системы" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        MinHeight="400" MinWidth="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="16">
            <TextBlock Text="🔧 Диагностика системы" 
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                      Margin="16">
            <TextBox x:Name="DiagnosticsTextBox"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas, Courier New, monospace"
                     FontSize="12"
                     Background="White"
                     BorderBrush="{StaticResource CorporateBorder}"
                     BorderThickness="1"
                     Padding="12"
                     MinHeight="300"/>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource CorporateGrayLightBrush}" 
                BorderThickness="0,1,0,0" BorderBrush="{StaticResource CorporateBorder}"
                Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="📋 Копировать в буфер" 
                        Click="CopyToClipboard_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,8,0"/>
                
                <Button Content="💾 Сохранить в файл" 
                        Click="SaveToFile_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,8,0"/>
                
                <Button Content="Закрыть" 
                        IsCancel="True"
                        Click="Close_Click"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>