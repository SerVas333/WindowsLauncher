<Window x:Class="WindowsLauncher.UI.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Первоначальная настройка - KDV Launcher"
        Width="600" Height="687"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Подключаем корпоративные стили -->
        <ResourceDictionary>

            <!-- Локальные стили специфичные для SetupWindow -->
            <Style x:Key="SetupStepHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <Style x:Key="SetupStepDescriptionStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariantBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>

            <Style x:Key="SetupValidationTextStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>

            <Style x:Key="SetupStepContainerStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="8,8,0,0" Padding="30,20">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Логотип KDV -->
                    <Border Width="60" Height="60" Margin="0,0,0,10"
                            Background="White" CornerRadius="30">
                        <TextBlock Text="KDV" 
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Добро пожаловать в KDV Launcher" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="{DynamicResource OnPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Первоначальная настройка системы" 
                               FontSize="14" 
                               Foreground="{DynamicResource OnPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Содержимое -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="40,30">
                <StackPanel>
                    <!-- Шаг 1: Конфигурация домена -->
                    <Border Style="{StaticResource SetupStepContainerStyle}">
                        <StackPanel>
                            <TextBlock Text="1. Настройка подключения к домену" 
                                       Style="{StaticResource SetupStepHeaderStyle}"/>
                            <TextBlock Text="Укажите параметры подключения к Active Directory для аутентификации пользователей."
                                       Style="{StaticResource SetupStepDescriptionStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Домен:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                                <TextBox x:Name="DomainTextBox" Grid.Row="1" Grid.Column="0" 
                                         Margin="0,0,10,15"
                                         Text="company.local"
                                         Style="{DynamicResource TextBoxStyle}"
                                         TextChanged="DomainSettings_Changed"/>

                                <TextBlock Text="LDAP Сервер:" Grid.Row="0" Grid.Column="1" Margin="10,0,0,5"/>
                                <TextBox x:Name="LdapServerTextBox" Grid.Row="1" Grid.Column="1" 
                                         Margin="10,0,0,15"
                                         Text="dc.company.local"
                                         Style="{DynamicResource TextBoxStyle}"
                                         TextChanged="DomainSettings_Changed"/>

                                <TextBlock Text="Порт:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                                <TextBox x:Name="PortTextBox" Grid.Row="3" Grid.Column="0" 
                                         Margin="0,0,10,15"
                                         Text="389"
                                         Style="{DynamicResource TextBoxStyle}"
                                         TextChanged="DomainSettings_Changed"/>

                                <CheckBox x:Name="UseTlsCheckBox" Grid.Row="3" Grid.Column="1" 
                                          Content="Использовать TLS" 
                                          IsChecked="True"
                                          Margin="10,0,0,15"
                                          VerticalAlignment="Center"
                                          Style="{DynamicResource CheckBoxStyle}"
                                          Checked="DomainSettings_Changed"
                                          Unchecked="DomainSettings_Changed"/>
                            </Grid>

                            <Button x:Name="TestConnectionButton" 
                                    Content="Проверить подключение"
                                    Width="150" Height="45"
                                    HorizontalAlignment="Left"
                                    Style="{DynamicResource SecondaryButtonStyle}"
                                    Click="TestConnectionButton_Click"/>

                            <StackPanel x:Name="ConnectionStatusPanel" 
                                        Orientation="Horizontal" 
                                        Margin="0,10,0,0"
                                        Visibility="Collapsed">
                                <Ellipse x:Name="ConnectionStatusIndicator" 
                                         Width="8" Height="8" 
                                         Margin="0,0,8,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock x:Name="ConnectionStatusText" 
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Шаг 2: Настройка базы данных -->
                    <Border Style="{StaticResource SetupStepContainerStyle}">
                        <StackPanel>
                            <TextBlock Text="2. Настройка базы данных" 
                                       Style="{StaticResource SetupStepHeaderStyle}"/>
                            <TextBlock Text="Выберите тип базы данных для хранения информации о пользователях и приложениях."
                                       Style="{StaticResource SetupStepDescriptionStyle}"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Выбор типа БД -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="Тип базы данных:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <ComboBox x:Name="DatabaseTypeComboBox" 
                                              Width="200" Height="45"
                                              SelectionChanged="DatabaseTypeComboBox_SelectionChanged"
                                              Style="{DynamicResource ComboBoxStyle}">
                                        <ComboBoxItem Content="SQLite (по умолчанию)" Tag="SQLite" IsSelected="True"/>
                                        <ComboBoxItem Content="Firebird" Tag="Firebird"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Настройки Firebird (скрыты по умолчанию) -->
                                <Border x:Name="FirebirdSettingsPanel" Grid.Row="1" 
                                        Background="{DynamicResource BackgroundBrush}" 
                                        CornerRadius="4" Padding="15" Margin="0,0,0,15"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="Настройки Firebird:" FontWeight="Medium" Margin="0,0,0,10"/>
                                        
                                        <!-- Режим подключения -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text="Режим:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                            <ComboBox x:Name="FirebirdModeComboBox" 
                                                      Width="200" Height="40"
                                                      SelectionChanged="FirebirdModeComboBox_SelectionChanged"
                                                      Style="{DynamicResource ComboBoxStyle}">
                                                <ComboBoxItem Content="Встроенный (Embedded)" Tag="Embedded" IsSelected="True"/>
                                                <ComboBoxItem Content="Клиент-сервер" Tag="ClientServer"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Путь к базе данных -->
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="DatabasePathLabel" Text="Путь к базе данных:" Margin="0,0,0,5"/>
                                            <TextBox x:Name="DatabasePathTextBox" Grid.Row="1" 
                                                     Text="launcher.fdb"
                                                     Style="{DynamicResource TextBoxStyle}"
                                                     TextChanged="DatabaseSettings_Changed"
                                                     Margin="0,5,10,0"/>
                                            <Button x:Name="BrowseDatabasePathButton" Grid.Column="1" Grid.Row="1" 
                                                    Content="..." Width="40" Height="40" Margin="0,5,0,0"
                                                    Style="{DynamicResource SecondaryButtonStyle}"
                                                    Click="BrowseDatabasePathButton_Click"/>
                                        </Grid>

                                        <!-- Настройки сервера (только для Client-Server) -->
                                        <StackPanel x:Name="FirebirdServerPanel" Visibility="Collapsed">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Text="Сервер:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                                                <TextBox x:Name="FirebirdServerTextBox" Grid.Row="1" Grid.Column="0" 
                                                         Text="localhost" Margin="0,0,10,10"
                                                         Style="{DynamicResource TextBoxStyle}"
                                                         TextChanged="DatabaseSettings_Changed"/>

                                                <TextBlock Text="Порт:" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>
                                                <TextBox x:Name="FirebirdPortTextBox" Grid.Row="1" Grid.Column="1" 
                                                         Text="3050" Margin="0,0,0,10"
                                                         Style="{DynamicResource TextBoxStyle}"
                                                         TextChanged="DatabaseSettings_Changed"/>

                                                <TextBlock Text="Пользователь:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                                                <TextBox x:Name="FirebirdUserTextBox" Grid.Row="3" Grid.Column="0" 
                                                         Text="SYSDBA" Margin="0,0,10,10"
                                                         Style="{DynamicResource TextBoxStyle}"
                                                         TextChanged="DatabaseSettings_Changed"/>

                                                <TextBlock Text="Пароль:" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>
                                                <PasswordBox x:Name="FirebirdPasswordBox" Grid.Row="3" Grid.Column="1" 
                                                             Margin="0,0,0,10"
                                                             Style="{DynamicResource PasswordBoxStyle}"
                                                             PasswordChanged="DatabaseSettings_Changed"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Кнопка тестирования подключения к БД -->
                                        <Button x:Name="TestDatabaseButton" 
                                                Content="Проверить подключение к БД"
                                                Width="200" Height="40"
                                                HorizontalAlignment="Left"
                                                Style="{DynamicResource SecondaryButtonStyle}"
                                                Click="TestDatabaseButton_Click"/>

                                        <StackPanel x:Name="DatabaseStatusPanel" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,10,0,0"
                                                    Visibility="Collapsed">
                                            <Ellipse x:Name="DatabaseStatusIndicator" 
                                                     Width="8" Height="8" 
                                                     Margin="0,0,8,0"
                                                     VerticalAlignment="Center"/>
                                            <TextBlock x:Name="DatabaseStatusText" 
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Шаг 3: Сервисный администратор -->
                    <Border Style="{StaticResource SetupStepContainerStyle}">
                        <StackPanel>
                            <TextBlock Text="3. Настройка сервисного администратора" 
                                       Style="{StaticResource SetupStepHeaderStyle}"/>
                            <TextBlock Text="Создайте локальную учетную запись администратора для управления системой в случае недоступности домена."
                                       Style="{StaticResource SetupStepDescriptionStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Имя пользователя:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                                <TextBox x:Name="ServiceUsernameTextBox" Grid.Row="1" Grid.Column="0" 
                                         Margin="0,0,10,15"
                                         Text="serviceadmin"
                                         Style="{DynamicResource TextBoxStyle}"
                                         TextChanged="ServiceAdmin_Changed"/>

                                <TextBlock Text="Время сессии (мин):" Grid.Row="0" Grid.Column="1" Margin="10,0,0,5"/>
                                <TextBox x:Name="SessionTimeoutTextBox" Grid.Row="1" Grid.Column="1" 
                                         Margin="10,0,0,15"
                                         Text="60"
                                         Style="{DynamicResource TextBoxStyle}"
                                         TextChanged="ServiceAdmin_Changed"/>

                                <TextBlock Text="Пароль:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                                <PasswordBox x:Name="ServicePasswordBox" Grid.Row="3" Grid.Column="0" 
                                             Margin="0,0,10,15"
                                             Style="{DynamicResource PasswordBoxStyle}"
                                             PasswordChanged="ServiceAdmin_Changed"/>

                                <TextBlock Text="Подтверждение:" Grid.Row="2" Grid.Column="1" Margin="10,0,0,5"/>
                                <PasswordBox x:Name="ServicePasswordConfirmBox" Grid.Row="3" Grid.Column="1" 
                                             Margin="10,0,0,15"
                                             Style="{DynamicResource PasswordBoxStyle}"
                                             PasswordChanged="ServiceAdmin_Changed"/>
                            </Grid>

                            <!-- Требования к паролю -->
                            <Border Background="{DynamicResource BackgroundBrush}" 
                                    CornerRadius="4" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Требования к паролю:" FontWeight="Medium" Margin="0,0,0,5"/>
                                    <StackPanel>
                                        <TextBlock x:Name="PasswordLengthValidation" 
                                                   Text="• Минимум 8 символов"
                                                   Style="{StaticResource SetupValidationTextStyle}"/>
                                        <TextBlock x:Name="PasswordUppercaseValidation" 
                                                   Text="• Заглавные буквы (A-Z)"
                                                   Style="{StaticResource SetupValidationTextStyle}"/>
                                        <TextBlock x:Name="PasswordLowercaseValidation" 
                                                   Text="• Строчные буквы (a-z)"
                                                   Style="{StaticResource SetupValidationTextStyle}"/>
                                        <TextBlock x:Name="PasswordDigitValidation" 
                                                   Text="• Цифры (0-9)"
                                                   Style="{StaticResource SetupValidationTextStyle}"/>
                                        <TextBlock x:Name="PasswordSpecialValidation" 
                                                   Text="• Специальные символы (!@#$%^*)"
                                                   Style="{StaticResource SetupValidationTextStyle}"/>
                                        <TextBlock x:Name="PasswordMatchValidation" 
                                                   Text="• Пароли должны совпадать"
                                                   Style="{StaticResource SetupValidationTextStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Шаг 4: Дополнительные настройки -->
                    <Border Style="{StaticResource SetupStepContainerStyle}">
                        <StackPanel>
                            <TextBlock Text="4. Дополнительные настройки" 
                                       Style="{StaticResource SetupStepHeaderStyle}"/>
                            <TextBlock Text="Настройте дополнительные параметры системы."
                                       Style="{StaticResource SetupStepDescriptionStyle}"/>

                            <StackPanel>
                                <CheckBox x:Name="EnableAuditingCheckBox" 
                                          Content="Включить аудит действий пользователей"
                                          IsChecked="True"
                                          Margin="0,0,0,10"
                                          Style="{DynamicResource CheckBoxStyle}"/>

                                <CheckBox x:Name="AutoStartCheckBox" 
                                          Content="Запускать с Windows"
                                          IsChecked="False"
                                          Margin="0,0,0,10"
                                          Style="{DynamicResource CheckBoxStyle}"/>

                                <CheckBox x:Name="CheckUpdatesCheckBox" 
                                          Content="Проверять обновления автоматически"
                                          IsChecked="True"
                                          Margin="0,0,0,10"
                                          Style="{DynamicResource CheckBoxStyle}"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="Язык интерфейса:" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,15,0"/>
                                    <ComboBox x:Name="LanguageComboBox" 
                                              Width="150" Height="45"
                                              SelectedIndex="0"
                                              Style="{DynamicResource ComboBoxStyle}">
                                        <ComboBoxItem Content="Русский" Tag="ru-RU"/>
                                        <ComboBoxItem Content="English" Tag="en-US"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Сообщение об ошибке -->
                    <Border x:Name="ErrorPanel" 
                            Background="{DynamicResource ErrorBrush}" 
                            CornerRadius="4" 
                            Padding="15,10" 
                            Margin="0,20,0,0"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠" 
                                       FontSize="16" 
                                       Foreground="{DynamicResource OnErrorBrush}"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="ErrorTextBlock" 
                                       Foreground="{DynamicResource OnErrorBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки действий -->
            <Border Grid.Row="2" 
                    BorderBrush="{DynamicResource LightGrayBrush}" 
                    BorderThickness="0,1,0,0" 
                    Padding="40,20"
                    Background="{DynamicResource SurfaceBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Индикатор прогресса и дополнительные кнопки -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="SetupProgressText" 
                                   Text="Настройка: 0/4 шагов завершено"
                                   FontSize="12"
                                   Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
                        
                        <!-- Virtual Keyboard Button -->
                        <Button x:Name="VirtualKeyboardButton" 
                                Content="⌨️"
                                ToolTip="Виртуальная клавиатура"
                                Width="32" Height="28" FontSize="14" Padding="0"
                                Margin="20,0,0,0"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Click="VirtualKeyboardButton_Click"/>
                    </StackPanel>

                    <!-- Основные кнопки -->
                    <Button x:Name="SkipButton" 
                            Grid.Column="1"
                            Content="Пропустить"
                            Width="100" Height="40"
                            Margin="0,0,15,0"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Click="SkipButton_Click"/>

                    <Button x:Name="CompleteSetupButton" 
                            Grid.Column="2"
                            Content="Завершить настройку"
                            Width="150" Height="40"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            IsEnabled="False"
                            Click="CompleteSetupButton_Click"/>
                </Grid>
            </Border>

            <!-- Индикатор загрузки -->
            <Border x:Name="LoadingOverlay" 
                    Grid.RowSpan="3"
                    Background="{StaticResource OverlayBrush}" 
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" Height="4" 
                                 Margin="0,0,0,15"/>
                    <TextBlock x:Name="LoadingText" 
                               Text="Сохранение настроек..."
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>