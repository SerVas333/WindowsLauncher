<!-- ===== WindowsLauncher.UI/Views/LoginWindow.xaml - ВЕРСИЯ С .RESX РЕСУРСАМИ ===== -->
<Window x:Class="WindowsLauncher.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prop="clr-namespace:WindowsLauncher.UI.Properties.Resources"
        mc:Ignorable="d"
        Title="{x:Static prop:Resources.LoginWindow_Title}"
        Width="450" Height="676"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="{StaticResource LauncherIconFallback}"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Локальные стили для элементов формы -->
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialTextBoxStyle}">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource MaterialPasswordBoxStyle}">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialButtonStyle}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialOutlineButtonStyle}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="8,8,0,0" Padding="30,20">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Логотип KDV с fallback -->
                    <Image Source="{StaticResource KdvLogoFallback}" 
                           Width="90" Height="60" 
                           Margin="0,0,0,10"/>

                    <TextBlock Text="{x:Static prop:Resources.LoginWindow_Title}" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="{DynamicResource OnPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static prop:Resources.LoginWindow_Subtitle}" 
                               FontSize="14" 
                               Foreground="{DynamicResource OnPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Форма входа -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                <StackPanel>
                    <!-- Переключатель режимов -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <RadioButton x:Name="DomainModeRadio" 
                                     Content="{x:Static prop:Resources.LoginWindow_DomainMode}"
                                     IsChecked="True"
                                     GroupName="LoginMode"
                                     Margin="0,0,20,0"
                                     Checked="LoginMode_Changed"/>
                        <RadioButton x:Name="ServiceModeRadio" 
                                     Content="{x:Static prop:Resources.LoginWindow_ServiceMode}"
                                     GroupName="LoginMode"
                                     Checked="LoginMode_Changed"/>
                    </StackPanel>

                    <!-- Панель доменного входа -->
                    <StackPanel x:Name="DomainLoginPanel">
                        <TextBlock Text="{x:Static prop:Resources.LoginWindow_Domain}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <TextBox x:Name="DomainTextBox" 
                                 Style="{StaticResource LoginTextBoxStyle}"
                                 Text="company.local"/>

                        <TextBlock Text="{x:Static prop:Resources.LoginWindow_Username}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <TextBox x:Name="UsernameTextBox" 
                                 Style="{StaticResource LoginTextBoxStyle}"
                                 KeyDown="Input_KeyDown"/>

                        <TextBlock Text="{x:Static prop:Resources.LoginWindow_Password}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Style="{StaticResource LoginPasswordBoxStyle}"
                                     KeyDown="Input_KeyDown"/>
                    </StackPanel>

                    <!-- Панель сервисного входа -->
                    <StackPanel x:Name="ServiceLoginPanel" Visibility="Collapsed">
                        <TextBlock Text="{x:Static prop:Resources.LoginWindow_ServiceUsername}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <TextBox x:Name="ServiceUsernameTextBox" 
                                 Style="{StaticResource LoginTextBoxStyle}"
                                 Text="serviceadmin"
                                 KeyDown="Input_KeyDown"/>

                        <TextBlock Text="{x:Static prop:Resources.LoginWindow_ServicePassword}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <PasswordBox x:Name="ServicePasswordBox" 
                                     Style="{StaticResource LoginPasswordBoxStyle}"
                                     KeyDown="Input_KeyDown"/>
                    </StackPanel>

                    <!-- Дополнительные опции -->
                    <CheckBox x:Name="RememberCredentialsCheckBox" 
                              Content="{x:Static prop:Resources.LoginWindow_RememberCredentials}"
                              Margin="0,10,0,0"
                              Foreground="{DynamicResource OnSurfaceBrush}"/>

                    <!-- Сообщение об ошибке -->
                    <Border x:Name="ErrorPanel" 
                            Background="{DynamicResource ErrorBrush}" 
                            CornerRadius="4" 
                            Padding="15,10" 
                            Margin="0,15,0,0"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠" 
                                       FontSize="16" 
                                       Foreground="{DynamicResource OnErrorBrush}"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="ErrorTextBlock" 
                                       Foreground="{DynamicResource OnErrorBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Статус подключения -->
                    <StackPanel x:Name="ConnectionStatusPanel" 
                                Orientation="Horizontal" 
                                Margin="0,15,0,0"
                                HorizontalAlignment="Center">
                        <Ellipse x:Name="ConnectionStatusIndicator" 
                                 Width="8" Height="8" 
                                 Fill="{DynamicResource SuccessBrush}"
                                 Margin="0,0,8,0"
                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectionStatusText" 
                                   Text="{x:Static prop:Resources.LoginWindow_DomainAvailable}"
                                   FontSize="12"
                                   Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки действий -->
            <Border Grid.Row="2" BorderBrush="{DynamicResource OutlineBrush}" BorderThickness="0,1,0,0" Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Дополнительные действия -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="SettingsButton" 
                                Content="{x:Static prop:Resources.Common_Settings}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="100"
                                Click="SettingsButton_Click"/>
                    </StackPanel>

                    <!-- Основные кнопки -->
                    <Button x:Name="CancelButton" 
                            Grid.Column="1"
                            Content="{x:Static prop:Resources.Common_Cancel}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="100"
                            Margin="0,0,15,0"
                            Click="CancelButton_Click"/>

                    <Button x:Name="LoginButton" 
                            Grid.Column="2"
                            Content="{x:Static prop:Resources.LoginWindow_Login}"
                            Style="{StaticResource LoginButtonStyle}"
                            Width="120"
                            IsDefault="True"
                            Click="LoginButton_Click"/>
                </Grid>
            </Border>

            <!-- Индикатор загрузки -->
            <Border x:Name="LoadingOverlay" 
                    Grid.RowSpan="3"
                    Background="#80000000" 
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" Height="4" 
                                 Margin="0,0,0,15"/>
                    <TextBlock x:Name="LoadingText" 
                               Text="{x:Static prop:Resources.LoginWindow_Authenticating}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>