<!-- ИСПРАВЛЕННАЯ ВЕРСИЯ LoginWindow.xaml с правильным пространством имен -->
<Window x:Class="WindowsLauncher.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:WindowsLauncher.UI.Properties.Resources"
        xmlns:loc="clr-namespace:WindowsLauncher.UI.Infrastructure.Localization"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.LoginWindow_Title}"
        Width="585" Height="796"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Ресурсы удалены - используем глобальные стили -->
        <loc:LocalizedStringConverter x:Key="LocalizedStringConverter"/>
    </Window.Resources>

    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="8,8,0,0" Padding="30,20">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Логотип KDV -->
                    <TextBlock Text="KDV" 
                              FontSize="36"
                              FontWeight="Bold"
                              Foreground="{DynamicResource OnPrimaryBrush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="{x:Static properties:Resources.LoginWindow_Title}" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="{DynamicResource OnPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static properties:Resources.LoginWindow_Subtitle}" 
                               FontSize="14" 
                               Foreground="{DynamicResource OnPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Форма входа -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                <StackPanel>
                    <!-- Переключатель режимов -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <RadioButton x:Name="GuestModeRadio" 
                                     Content="{x:Static properties:Resources.LoginWindow_GuestMode}"
                                     IsChecked="True"
                                     GroupName="LoginMode"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Margin="0,0,15,0"
                                     Checked="LoginMode_Changed"/>
                        <RadioButton x:Name="DomainModeRadio" 
                                     Content="{x:Static properties:Resources.LoginWindow_DomainMode}"
                                     GroupName="LoginMode"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Margin="0,0,15,0"
                                     Checked="LoginMode_Changed"/>
                        <RadioButton x:Name="LocalModeRadio" 
                                     Content="{x:Static properties:Resources.LoginWindow_LocalMode}"
                                     GroupName="LoginMode"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="LoginMode_Changed"/>
                    </StackPanel>

                    <!-- Панель доменного входа -->
                    <StackPanel x:Name="DomainLoginPanel">
                        <TextBlock Text="{x:Static properties:Resources.LoginWindow_Domain}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <TextBox x:Name="DomainTextBox" 
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,15"
                                 MinHeight="45"
                                 Text="kdvm" TextChanged="DomainTextBox_TextChanged"/>

                        <TextBlock Text="{x:Static properties:Resources.LoginWindow_Username}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <TextBox x:Name="UsernameTextBox" 
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,15"
                                 MinHeight="45"
                                 KeyDown="Input_KeyDown"/>

                        <TextBlock Text="{x:Static properties:Resources.LoginWindow_Password}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Style="{StaticResource PasswordBoxStyle}"
                                     Margin="0,0,0,15"
                                     MinHeight="45"
                                     KeyDown="Input_KeyDown"/>
                    </StackPanel>

                    <!-- Панель локальных пользователей -->
                    <StackPanel x:Name="LocalLoginPanel" Visibility="Collapsed">
                        <TextBlock Text="{x:Static properties:Resources.LoginWindow_LocalUsername}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <TextBox x:Name="LocalUsernameTextBox" 
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,15"
                                 MinHeight="45"
                                 KeyDown="Input_KeyDown"/>

                        <TextBlock Text="{x:Static properties:Resources.LoginWindow_LocalPassword}" 
                                   Margin="0,0,0,5" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource OnSurfaceBrush}"/>
                        <PasswordBox x:Name="LocalPasswordBox" 
                                     Style="{StaticResource PasswordBoxStyle}"
                                     Margin="0,0,0,15"
                                     MinHeight="45"
                                     KeyDown="Input_KeyDown"/>
                    </StackPanel>

                    <!-- Панель гостевого входа -->
                    <StackPanel x:Name="GuestLoginPanel">
                        <Border Background="{DynamicResource SurfaceVariantBrush}" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="0,0,0,20">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="👤" 
                                          FontSize="48" 
                                          HorizontalAlignment="Center" 
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="{x:Static properties:Resources.LoginWindow_GuestWelcome}" 
                                          FontSize="18" 
                                          FontWeight="Bold" 
                                          HorizontalAlignment="Center"
                                          Foreground="{DynamicResource OnSurfaceBrush}"
                                          Margin="0,0,0,5"/>
                                <TextBlock Text="{x:Static properties:Resources.LoginWindow_GuestDescription}" 
                                          FontSize="14" 
                                          HorizontalAlignment="Center"
                                          Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"/>
                                <TextBlock Text="{x:Static properties:Resources.LoginWindow_GuestLimitationWarning}" 
                                          FontSize="12" 
                                          HorizontalAlignment="Center"
                                          Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                          Margin="0,10,0,0"
                                          TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>


                    <!-- Сообщение об ошибке -->
                    <Border x:Name="ErrorPanel" 
                            Background="{DynamicResource ErrorBrush}" 
                            CornerRadius="4" 
                            Padding="15,10" 
                            Margin="0,15,0,0"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠" 
                                       FontSize="16" 
                                       Foreground="{DynamicResource OnErrorBrush}"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="ErrorTextBlock" 
                                       Foreground="{DynamicResource OnErrorBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Статус подключения (только для доменного режима) -->
                    <StackPanel x:Name="ConnectionStatusPanel" 
                                Orientation="Horizontal" 
                                Margin="0,15,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <Ellipse x:Name="ConnectionStatusIndicator" 
                                 Width="8" Height="8" 
                                 Fill="{DynamicResource SuccessBrush}"
                                 Margin="0,0,8,0"
                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectionStatusText" 
                                   Text="{x:Static properties:Resources.LoginWindow_DomainAvailable}"
                                   FontSize="12"
                                   Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки действий -->
            <Border Grid.Row="2" BorderBrush="{DynamicResource LightGrayBrush}" BorderThickness="0,1,0,0" Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Дополнительные действия -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="SettingsButton" 
                                Content="{x:Static properties:Resources.Common_Settings}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                MinHeight="45"
                                FontSize="14"
                                Width="128"
                                Click="SettingsButton_Click"/>
                        
                        <Button x:Name="VirtualKeyboardButton" 
                                Content="⌨️"
                                Style="{StaticResource SecondaryButtonStyle}"
                                MinHeight="45"
                                FontSize="18"
                                Width="63"
                                Margin="10,0,0,0"
                                ToolTip="{x:Static properties:Resources.LoginWindow_VirtualKeyboardTooltip}"
                                Click="VirtualKeyboardButton_Click"/>
                    </StackPanel>

                    <!-- Основные кнопки -->
                    <Button x:Name="CancelButton"
                            Content="{x:Static properties:Resources.Common_Cancel}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="221,0,23,1"
                            Click="CancelButton_Click"/>

                    <Button x:Name="LoginButton" 
                            Grid.Column="2"
                            Content="{x:Static properties:Resources.LoginWindow_Login}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            MinHeight="45"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Width="120"
                            IsDefault="True"
                            Click="LoginButton_Click"/>
                </Grid>
            </Border>

            <!-- Индикатор загрузки -->
            <Border x:Name="LoadingOverlay" 
                    Grid.RowSpan="3"
                    Background="{StaticResource OverlayBrush}" 
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" Height="4" 
                                 Margin="0,0,0,15"
                                 Foreground="{DynamicResource PrimaryBrush}"/>
                    <TextBlock x:Name="LoadingText" 
                               Text="{x:Static properties:Resources.LoginWindow_Authenticating}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>