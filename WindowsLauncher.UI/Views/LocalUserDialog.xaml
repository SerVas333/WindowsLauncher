<!-- WindowsLauncher.UI/Views/LocalUserDialog.xaml -->
<Window x:Class="WindowsLauncher.UI.Views.LocalUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:WindowsLauncher.UI.Converters"
        Title="Локальный пользователь"
        Height="600" Width="500"
        MinHeight="600" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:EnumToStringConverter x:Key="EnumToStringConverter"/>
        
        <!-- Корпоративный стиль для TextBox -->
        <Style x:Key="CorporateTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CorporateWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CorporateBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,16"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource CorporateRed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Корпоративный стиль для PasswordBox -->
        <Style x:Key="CorporatePasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource CorporateWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CorporateBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,16"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource CorporateRed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Корпоративный стиль для CheckBox -->
        <Style x:Key="CorporateCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Margin="0,0,0,16" 
                Background="{StaticResource CorporateRed}"
                CornerRadius="4">
            <Grid>
                <TextBlock Text="{Binding DialogTitle}"
                          FontSize="20" FontWeight="Medium"
                          Foreground="White"
                          Margin="24,16"
                          HorizontalAlignment="Left" VerticalAlignment="Center"/>
                          
                <TextBlock Text="👤" 
                          FontSize="24"
                          Foreground="White"
                          Margin="0,16,24,16"
                          HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      Background="{StaticResource CorporateWhite}">
            <StackPanel Margin="24,0,24,16" Background="{StaticResource CorporateWhite}">
                
                <!-- Loading Indicator -->
                <Border Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                        Margin="0,0,0,16"
                        Background="{StaticResource CorporateGray}"
                        BorderBrush="{StaticResource CorporateBorder}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <StackPanel Orientation="Horizontal" Margin="16">
                        <ProgressBar Width="24" Height="24"
                                   IsIndeterminate="True" Margin="0,0,16,0"
                                   Style="{StaticResource CorporateProgressBar}"/>
                        <TextBlock Text="{Binding LoadingMessage}"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource CorporateText}"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border Background="#D32F2F"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}"
                        Margin="0,0,0,16"
                        CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="⚠️"
                                   Width="24" Height="24"
                                   Foreground="White"
                                   Margin="16,16,8,16"
                                   VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="1" 
                                 Text="{Binding ErrorMessage}"
                                 Foreground="White"
                                 TextWrapping="Wrap"
                                 Margin="0,16,16,16"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Form Fields -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisConverter}}"
                           Background="{StaticResource CorporateWhite}">
                    
                    <!-- Username -->
                    <Label Content="Имя пользователя" Margin="0,8,0,0"/>
                    <TextBox x:Name="UsernameTextBox"
                             Style="{StaticResource CorporateTextBox}"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}"/>

                    <!-- Display Name -->
                    <Label Content="Отображаемое имя" Margin="0,8,0,0"/>
                    <TextBox Style="{StaticResource CorporateTextBox}"
                             Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Email -->
                    <Label Content="Email" Margin="0,8,0,0"/>
                    <TextBox Style="{StaticResource CorporateTextBox}"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Password (only in Create mode) -->
                    <Label Content="Пароль" Margin="0,8,0,0"
                           Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}"/>
                    <PasswordBox x:Name="PasswordBox"
                                Style="{StaticResource CorporatePasswordBox}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}"/>

                    <!-- Confirm Password (only in Create mode) -->
                    <Label Content="Подтверждение пароля" Margin="0,8,0,0"
                           Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                Style="{StaticResource CorporatePasswordBox}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}"/>

                    <!-- Role -->
                    <Label Content="Роль" Margin="0,8,0,0"/>
                    <ComboBox Style="{StaticResource CorporateComboBox}"
                              ItemsSource="{Binding AvailableRoles}"
                              SelectedItem="{Binding SelectedRole}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Active Status -->
                    <CheckBox Content="Активный пользователь"
                              IsChecked="{Binding IsActive}"
                              Margin="0,8,0,16"
                              Style="{StaticResource CorporateCheckBox}"/>

                    <!-- Password Options (only in Edit mode) -->
                    <GroupBox Header="Опции пароля"
                              Margin="0,8,0,16"
                              Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel>
                            <CheckBox Content="Требовать смену пароля при следующем входе"
                                      IsChecked="{Binding RequirePasswordChange}"
                                      Margin="0,8,0,8"
                                      Style="{StaticResource CorporateCheckBox}"/>
                            
                            <Button Content="Сбросить пароль"
                                    Command="{Binding ResetPasswordCommand}"
                                    Margin="0,8,0,0"
                                    Style="{StaticResource CorporateButtonSecondary}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Account Status (only in Edit mode) -->
                    <GroupBox Header="Состояние учетной записи"
                              Margin="0,8,0,16"
                              Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Неудачные попытки входа:"
                                             FontSize="12" Opacity="0.7"/>
                                    <TextBlock Text="{Binding FailedLoginAttempts}"
                                             FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1"
                                        Content="Сбросить"
                                        Command="{Binding ResetFailedAttemptsCommand}"
                                        Style="{StaticResource CorporateButtonSecondary}"/>
                            </Grid>
                            
                            <CheckBox Content="Учетная запись заблокирована"
                                      IsChecked="{Binding IsLocked}"
                                      Margin="0,8,0,0"
                                      Style="{StaticResource CorporateCheckBox}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Audit Information (only in Edit mode) -->
                    <GroupBox Header="Информация"
                              Margin="0,8,0,16"
                              Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Создан:"
                                         FontSize="12" Opacity="0.7"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                         FontSize="14" FontWeight="Medium"/>
                                
                                <TextBlock Text="Последний вход:"
                                         FontSize="12" Opacity="0.7"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding LastLoginAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}', TargetNullValue='Никогда'}"
                                         FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Изменен:"
                                         FontSize="12" Opacity="0.7"/>
                                <TextBlock Text="{Binding ModifiedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}', TargetNullValue='-'}"
                                         FontSize="14" FontWeight="Medium"/>
                                
                                <TextBlock Text="Последняя активность:"
                                         FontSize="12" Opacity="0.7"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding LastActivityAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}', TargetNullValue='Никогда'}"
                                         FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="{StaticResource CorporateGray}"
                BorderBrush="{StaticResource CorporateBorder}"
                BorderThickness="1,1,1,0"
                Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="24,16">
                
                <Button Content="Отмена"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource CorporateButtonSecondary}"
                        Margin="0,0,16,0"
                        MinWidth="100"/>
                
                <Button Content="{Binding SaveButtonText}"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource CorporateButton}"
                        IsDefault="True"
                        MinWidth="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>