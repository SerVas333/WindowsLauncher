<!-- ===== MainWindow.xaml - ИСПРАВЛЕННАЯ ВЕРСИЯ ===== -->
<Window x:Class="WindowsLauncher.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsLauncher.UI"
        xmlns:converters="clr-namespace:WindowsLauncher.UI.Converters"
        xmlns:loc="clr-namespace:WindowsLauncher.UI.Infrastructure.Localization"
        xmlns:icons="clr-namespace:WindowsLauncher.UI.Infrastructure.Icons"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, FallbackValue='Windows Launcher'}" 
        d:Title="Windows Launcher - Design Time"
        d:DataContext="{d:DesignInstance Type=local:MainWindow, IsDesignTimeCreatable=False}"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        MinHeight="600" MinWidth="900">

    <Window.Resources>
        <!-- Конвертеры -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:RoleToVisibilityConverter x:Key="RoleToVisibilityConverter"/>
        
        <!-- Localization converter -->
        <loc:LocalizedStringConverter x:Key="LocalizedStringConverter"/>
        
        <!-- Font Awesome Icon converters -->
        <icons:EmojiToFontAwesome32Converter x:Key="EmojiToFontAwesome32Converter"/>
    </Window.Resources>

    <Window.InputBindings>
        <!-- Горячие клавиши для UI (пока отключены) -->
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content with Sidebar -->
            <RowDefinition Height="35"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Header с корпоративным дизайном -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Logo -->
                    <ColumnDefinition Width="*"/>
                    <!-- Title -->
                    <ColumnDefinition Width="350"/>
                    <!-- Search -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- User info -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Controls -->
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/KDV.png"
                       Width="150"
                       Height="40"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="10"/>    
                </StackPanel>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_CorporateLauncher}" 
                               FontSize="24" FontWeight="Light" 
                               Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="11" Foreground="{DynamicResource OnPrimaryBrush}" Opacity="0.9"/>
                </StackPanel>

                <!-- Search -->
                <TextBox Grid.Column="2" 
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Margin="20,0"/>

                <!-- User Info -->
                <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="{Binding CurrentUser.DisplayName}" 
                               FontWeight="SemiBold" Foreground="White" 
                               HorizontalAlignment="Right" FontSize="13"/>
                    <TextBlock Text="{Binding LocalizedRole}" 
                               FontSize="11" Foreground="{DynamicResource OnPrimaryBrush}" Opacity="0.8"
                               HorizontalAlignment="Right"/>
                </StackPanel>

                <!-- Controls -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Width="240">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SwitchUserCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_SwitchUserTooltip}"
                            Width="40" Height="32" Padding="4">
                        <ContentPresenter Content="{Binding Source='👤', Converter={StaticResource EmojiToFontAwesome32Converter}}"/>
                    </Button>
                    
                    <!-- Email Compose Button -->
                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding ComposeEmailCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_ComposeEmailTooltip}"
                            Width="40" Height="32" Padding="4">
                        <fa:ImageAwesome Icon="PaperPlane" 
                                       Width="16" Height="16" 
                                       Foreground="{StaticResource CorporateGrayBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    
                    <!-- Address Book Button -->
                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding OpenAddressBookCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_AddressBookTooltip}"
                            Width="40" Height="32" Padding="4">
                        <fa:ImageAwesome Icon="AddressBook" 
                                       Width="16" Height="16" 
                                       Foreground="{StaticResource CorporateGrayBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    
                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding OpenAdminCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_ManageApplicationsTooltip}"
                            Width="40" Height="32" Padding="4"
                            Visibility="{Binding CurrentUser.Role, 
                                       Converter={StaticResource RoleToVisibilityConverter}, 
                                       ConverterParameter=Administrator}">
                        <ContentPresenter Content="{Binding Source='🛠️', Converter={StaticResource EmojiToFontAwesome32Converter}}"/>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding OpenSettingsCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_SettingsTooltip}"
                            Width="40" Height="32" Padding="4">
                        <ContentPresenter Content="{Binding Source='⚙️', Converter={StaticResource EmojiToFontAwesome32Converter}}"/>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding RefreshCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_UpdateTooltip}"
                            Width="40" Height="32" Padding="4">
                        <ContentPresenter Content="{Binding Source='🔄', Converter={StaticResource EmojiToFontAwesome32Converter}}"/>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding LogoutCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_ExitTooltip}"
                            Width="40" Height="32" Padding="4"
                            Margin="8,0,0,0">
                        <ContentPresenter Content="{Binding Source='🚪', Converter={StaticResource EmojiToFontAwesome32Converter}}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with Sidebar -->
        <Grid Grid.Row="1" Background="{StaticResource SurfaceVariantBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="Auto"/>
                <!-- Toggle Panel -->
                <ColumnDefinition Width="*"/>
                <!-- Content -->
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderThickness="0,0,1,0" 
                    BorderBrush="{StaticResource LightGrayBrush}"
                    Width="340"
                    Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVisConverter}}">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Hidden" 
                              Padding="16">
                    <StackPanel>
                        <!-- Sidebar Header -->
                        <TextBlock Text="Категории" 
                                   FontFamily="Segoe UI"
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Categories List -->
                        <ItemsControl ItemsSource="{Binding LocalizedCategories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" 
                                            Background="Transparent"
                                            CornerRadius="4">
                                        <CheckBox IsChecked="{Binding IsChecked}"
                                                  Content="{Binding DisplayName}"
                                                  FontFamily="Segoe UI"
                                                  FontSize="21"
                                                  Padding="12,12"
                                                  HorizontalAlignment="Stretch">
                                            <CheckBox.Template>
                                                <ControlTemplate TargetType="CheckBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{StaticResource LightGrayBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Padding="12,12">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Category Icon -->
                                                            <fa:ImageAwesome Grid.Column="0"
                                                                           Icon="{Binding Icon}"
                                                                           Width="20" Height="20"
                                                                           Foreground="{Binding Color}"
                                                                           Margin="0,0,8,0"
                                                                           VerticalAlignment="Center"/>
                                                            
                                                            <!-- Category Name -->
                                                            <ContentPresenter Grid.Column="2"
                                                                            Content="{TemplateBinding Content}"
                                                                            VerticalAlignment="Center"
                                                                            TextElement.Foreground="{StaticResource PrimaryTextBrush}"/>
                                                            
                                                            <!-- Checkbox -->
                                                            <Border Grid.Column="3"
                                                                    Width="27" Height="27"
                                                                    Background="{StaticResource SurfaceBrush}"
                                                                    BorderBrush="{StaticResource PrimaryBrush}"
                                                                    BorderThickness="2"
                                                                    CornerRadius="4"
                                                                    VerticalAlignment="Center">
                                                                <fa:ImageAwesome Icon="Check"
                                                                               Width="15" Height="15"
                                                                               Foreground="{StaticResource PrimaryBrush}"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"
                                                                               Visibility="{TemplateBinding IsChecked, Converter={StaticResource BoolToVisConverter}}"/>
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                    
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </CheckBox.Template>
                                        </CheckBox>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Sidebar Toggle Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderThickness="0,0,1,0" 
                    BorderBrush="{StaticResource LightGrayBrush}"
                    Width="80"
                    Padding="20">
                <Button Command="{Binding ToggleSidebarCommand}"
                        ToolTip="Показать/скрыть боковую панель категорий"
                        Width="38" Height="32" Padding="4"
                        VerticalAlignment="Top"
                        Margin="0,8,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                            <Style.Triggers>
                                <!-- Индикация активного фильтра -->
                                <DataTrigger Binding="{Binding HasActiveFilter}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <fa:ImageAwesome Icon="Sliders" 
                                   Width="18" Height="18" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                        <fa:ImageAwesome.Style>
                            <Style TargetType="fa:ImageAwesome">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Style.Triggers>
                                    <!-- Изменяем цвет иконки при активном фильтре -->
                                    <DataTrigger Binding="{Binding HasActiveFilter}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource OnPrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </fa:ImageAwesome.Style>
                    </fa:ImageAwesome>
                </Button>
            </Border>
            
            <!-- Applications Content -->
            <ScrollViewer Grid.Column="2" Padding="24" Background="{StaticResource SurfaceVariantBrush}">
                <Grid>
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                    <Border Width="60" Height="60" Background="{StaticResource PrimaryBrush}" 
                            CornerRadius="30" Margin="0,0,0,20">
                        <ContentPresenter Content="{Binding Source='⏳', Converter={StaticResource EmojiToFontAwesome32Converter}}"
                                         HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ContentPresenter.RenderTransform>
                                <RotateTransform/>
                            </ContentPresenter.RenderTransform>
                            <ContentPresenter.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ContentPresenter.Triggers>
                        </ContentPresenter>
                    </Border>
                    <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_LoadingApplications}" 
                               FontSize="14" Foreground="{StaticResource WhiteTextBrush}"/>
                </StackPanel>

                <!-- Applications Grid -->
                <ItemsControl ItemsSource="{Binding FilteredApplications}"
                             Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" 
                                    Width="220" x:Name="AppTileBorder">
                                <Grid x:Name="AppTileContent">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- App Icon -->
                                    <Border Grid.Row="0" Width="50" Height="50" 
                                           Background="{Binding CategoryColor}" 
                                           CornerRadius="8"
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,12">
                                        <fa:ImageAwesome Icon="{Binding CategoryIcon}" 
                                                       Width="24" Height="24" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- App Info -->
                                    <StackPanel Grid.Row="1" x:Name="AppInfoPanel" 
                                               VerticalAlignment="Top" Margin="0,0,0,0">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="SemiBold" FontSize="12"
                                                  TextAlignment="Center" TextWrapping="Wrap"
                                                  Margin="0,0,0,6"
                                                  Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <TextBlock Text="{Binding DisplayDescription}" 
                                                  FontSize="11" 
                                                  Foreground="{StaticResource MutedTextBrush}"
                                                  TextAlignment="Center" TextWrapping="Wrap"
                                                  LineHeight="16"/>
                                    </StackPanel>

                                    <!-- Category Label -->
                                    <TextBlock Grid.Row="2" 
                                              Text="{Binding LocalizedCategory}" 
                                              FontSize="10" 
                                              Foreground="{StaticResource PrimaryLightBrush}"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              Margin="0,0,0,8"/>
                                </Grid>

                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, 
                                                        Path=DataContext.LaunchApplicationCommand}"
                                                CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- No Applications Message -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding HasNoApplications, Converter={StaticResource BoolToVisConverter}}">
                    <Border Width="80" Height="80" Background="{StaticResource CorporateGrayDarkBrush}" 
                            CornerRadius="40" Margin="0,0,0,20">
                        <ContentPresenter Content="{Binding Source='📱', Converter={StaticResource EmojiToFontAwesome32Converter}}"
                                         HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6"/>
                    </Border>
                    <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_NoApplicationsFound}" 
                              FontSize="18" FontWeight="SemiBold" 
                              Foreground="{StaticResource PrimaryTextBrush}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_NoApplicationsHint}" 
                              FontSize="13" 
                              Foreground="{StaticResource MutedTextBrush}"
                              HorizontalAlignment="Center" 
                              Margin="0,8,0,0"
                              TextAlignment="Center"/>
                </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar - ИСПРАВЛЕНО -->
        <Border x:Name="StatusBar" Grid.Row="2" Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource LightGrayBrush}">

            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" 
                          Foreground="{StaticResource PrimaryTextBrush}"
                          FontFamily="Segoe UI"
                          FontSize="12"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Application Count -->
                    <TextBlock Text="{Binding ApplicationCount}" 
                              FontSize="12" FontWeight="SemiBold"
                              Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_ApplicationsCount}" FontSize="12" 
                              Foreground="{StaticResource MutedTextBrush}"/>


                    <!-- App Switcher Button -->
                    <Button x:Name="AppSwitcherButton"
                            Click="AppSwitcherButton_Click"
                            Width="32" Height="28" FontSize="14" Padding="0"
                            Margin="12,0,0,0">
                        <Button.ToolTip>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Переключатель приложений" FontWeight="SemiBold"/>
                                <TextBlock x:Name="AppSwitcherTooltipText" Text="Режим: Загрузка..." FontSize="11" Opacity="0.8"/>
                            </StackPanel>
                        </Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="True">
                                        <Setter Property="Opacity" Value="1.0"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Grid>
                            <fa:ImageAwesome Icon="WindowRestore" 
                                           Width="16" Height="16" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <!-- Индикатор количества приложений -->
                            <Border x:Name="AppCountBadge" 
                                    Background="{StaticResource PrimaryBrush}" 
                                    CornerRadius="8" 
                                    Width="14" Height="14"
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Top" 
                                    Margin="0,-2,-2,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="AppCountText" 
                                           Text="0" 
                                           Foreground="White" 
                                           FontSize="8" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Button>

                    <!-- Virtual Keyboard Button -->
                    <Button Command="{Binding ShowVirtualKeyboardCommand}"
                            ToolTip="{Binding Source={x:Static loc:LocalizationHelper.Instance}, Path=CurrentCulture, Converter={StaticResource LocalizedStringConverter}, ConverterParameter=MainWindow_VirtualKeyboardTooltip}"
                            Width="32" Height="28" FontSize="14" Padding="0"
                            Margin="8,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsVirtualKeyboardVisible}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <ContentPresenter Content="{Binding Source='⌨️', Converter={StaticResource EmojiToFontAwesome32Converter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>