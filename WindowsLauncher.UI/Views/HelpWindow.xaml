<Window x:Class="WindowsLauncher.UI.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:properties="clr-namespace:WindowsLauncher.UI.Properties.Resources"
        Title="{x:Static properties:Resources.Help_WindowTitle}"
        Width="1000" Height="700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">


    <Grid>
        <Grid.RowDefinitions>
            <!-- Простая панель навигации -->
            <RowDefinition Height="Auto"/>
            <!-- WebView2 контент -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ПАНЕЛЬ НАВИГАЦИИ -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}"
                Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Навигационные кнопки -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BackButton" 
                            ToolTip="Назад"
                            Style="{StaticResource HelpNavigationButtonStyle}"
                            Width="40" Height="28"
                            Click="BackButton_Click">
                        <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              Width="16" Height="16" 
                              Stretch="Uniform"/>
                    </Button>
                    
                    <Button x:Name="ForwardButton" 
                            ToolTip="Вперед"
                            Style="{StaticResource HelpNavigationButtonStyle}"
                            Width="40" Height="28"
                            Margin="2,0,0,0"
                            Click="ForwardButton_Click">
                        <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              Width="16" Height="16" 
                              Stretch="Uniform"/>
                    </Button>
                    
                    <Button x:Name="HomeButton" 
                            ToolTip="Главная"
                            Style="{StaticResource HelpNavigationButtonStyle}"
                            Width="40" Height="28"
                            Margin="8,0,0,0"
                            Click="HomeButton_Click">
                        <Path Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              Width="16" Height="16" 
                              Stretch="Uniform"/>
                    </Button>
                </StackPanel>

                <!-- Заголовок -->
                <TextBlock Grid.Column="1" 
                           Text="{x:Static properties:Resources.Help_WindowTitle}"
                           Style="{StaticResource CorporateTitle}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Кнопка закрытия -->
                <Button Grid.Column="2" 
                        Content="✕"
                        ToolTip="Закрыть"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="36" Height="36"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- WEBVIEW2 КОНТЕНТ -->
        <Border Grid.Row="1" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,1,1">
            
            <wv2:WebView2 x:Name="HelpWebView"
                          NavigationStarting="HelpWebView_NavigationStarting"
                          NavigationCompleted="HelpWebView_NavigationCompleted"/>
        </Border>
    </Grid>
</Window>