<!-- WindowsLauncher.UI/Views/ChangePasswordDialog.xaml -->
<Window x:Class="WindowsLauncher.UI.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WindowsLauncher.UI.Converters"
        Title="Смена пароля"
        Height="550" Width="480"
        MinHeight="550" MinWidth="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource CorporateGray}"
        FontFamily="Segoe UI"
        TextElement.Foreground="{StaticResource CorporateText}"
        TextElement.FontWeight="Normal"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        
        <!-- Корпоративный стиль для PasswordBox -->
        <Style x:Key="CorporatePasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource CorporateWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CorporateBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,16"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource CorporateRed}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource CorporateDisabled}"/>
                                <Setter Property="Foreground" Value="{StaticResource CorporateDisabledText}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ошибок -->
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource CorporateRed}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24" Background="{StaticResource CorporateWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource CorporateRed}"
                Margin="-24,-24,-24,24"
                Padding="24,16">
            <TextBlock Text="Смена пароля"
                       Style="{StaticResource CorporateTitle}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Форма смены пароля -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Background="{StaticResource CorporateWhite}">
                
                <!-- Информация о пользователе -->
                <GroupBox Header="Пользователь" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                     Text="Имя пользователя:"
                                     FontWeight="Medium"
                                     Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                     x:Name="UsernameTextBlock"
                                     Text="{Binding Username}"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource CorporateRed}"/>
                        </Grid>
                        
                        <!-- Информация о пароле -->
                        <TextBlock x:Name="PasswordInfoTextBlock"
                                   Text="{Binding PasswordInfoText}"
                                   FontSize="12"
                                   Foreground="{StaticResource CorporateTextMuted}"
                                   Margin="0,8,0,0"
                                   Visibility="{Binding PasswordInfoVisibility}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Текущий пароль -->
                <Label Content="Текущий пароль" Margin="0,8,0,0"/>
                <PasswordBox x:Name="CurrentPasswordBox"
                             Style="{StaticResource CorporatePasswordBox}"
                             PasswordChanged="CurrentPasswordBox_PasswordChanged"/>
                
                <TextBlock x:Name="CurrentPasswordErrorText"
                           Style="{StaticResource ErrorTextStyle}"
                           Visibility="Collapsed"/>

                <!-- Новый пароль -->
                <Label Content="Новый пароль" Margin="0,8,0,0"/>
                <PasswordBox x:Name="NewPasswordBox"
                             Style="{StaticResource CorporatePasswordBox}"
                             PasswordChanged="NewPasswordBox_PasswordChanged"/>
                
                <TextBlock x:Name="NewPasswordErrorText"
                           Style="{StaticResource ErrorTextStyle}"
                           Visibility="Collapsed"/>

                <!-- Подтверждение пароля -->
                <Label Content="Подтверждение нового пароля" Margin="0,8,0,0"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Style="{StaticResource CorporatePasswordBox}"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                
                <TextBlock x:Name="ConfirmPasswordErrorText"
                           Style="{StaticResource ErrorTextStyle}"
                           Visibility="Collapsed"/>

                <!-- Требования к паролю -->
                <GroupBox Header="Требования к паролю" Margin="0,16,0,16">
                    <TextBlock x:Name="PasswordRequirementsText"
                               Text="{Binding PasswordRequirements}"
                               FontSize="12"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Foreground="{StaticResource CorporateTextMuted}"/>
                </GroupBox>

                <!-- Общие ошибки -->
                <Border x:Name="GeneralErrorCard"
                        Margin="0,0,0,16"
                        Padding="16"
                        Background="{StaticResource CorporateWhite}"
                        BorderBrush="{StaticResource CorporateRed}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="⚠️ Ошибка"
                                   Foreground="{StaticResource CorporateRed}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="GeneralErrorText"
                                   Style="{StaticResource ErrorTextStyle}"
                                   FontSize="14"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Virtual Keyboard Button -->
            <Button Grid.Column="0" 
                    x:Name="VirtualKeyboardButton" 
                    Content="⌨️"
                    ToolTip="Виртуальная клавиатура"
                    Width="32" Height="28" FontSize="14" Padding="0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource CorporateButtonSecondary}"
                    Click="VirtualKeyboardButton_Click"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                
                <Button x:Name="CancelButton"
                        Content="Отмена"
                        Style="{StaticResource CorporateButtonSecondary}"
                        Margin="0,0,16,0"
                        MinWidth="100"
                        Click="CancelButton_Click"/>
                
                <Button x:Name="ChangePasswordButton"
                        Content="Сменить пароль"
                        Style="{StaticResource CorporateButton}"
                        MinWidth="120"
                        IsEnabled="False"
                        Click="ChangePasswordButton_Click"/>
                
            </StackPanel>
        </Grid>

    </Grid>
</Window>