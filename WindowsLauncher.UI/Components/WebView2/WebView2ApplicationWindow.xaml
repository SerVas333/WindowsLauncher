<Window x:Class="WindowsLauncher.UI.Components.WebView2.WebView2ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Web Application"
        Height="600" Width="1024"
        MinHeight="400" MinWidth="640"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Контент WebView2 -->
            <RowDefinition Height="*"/>
            <!-- Статус бар (опциональный) -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- WebView2 контрол -->
        <wv2:WebView2 Grid.Row="0" 
                      x:Name="WebView"
                      CreationProperties="{Binding WebViewCreationProperties}"
                      CoreWebView2InitializationCompleted="WebView_CoreWebView2InitializationCompleted"
                      NavigationStarting="WebView_NavigationStarting"
                      NavigationCompleted="WebView_NavigationCompleted"/>

        <!-- Простой статус бар -->
        <Border Grid.Row="1" 
                Background="#E0E0E0"
                BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <TextBlock Text="{Binding StatusText}" 
                       FontSize="11"
                       Foreground="#666666"/>
        </Border>
    </Grid>
</Window>