<UserControl x:Class="WindowsLauncher.UI.Components.StatusBar.RunningAppsStatusBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:WindowsLauncher.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="200"
             Background="Transparent">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Иконка запущенных приложений -->
        <Border Grid.Column="0" 
                Background="{StaticResource PrimaryBrush}"
                CornerRadius="12"
                Padding="8,4"
                Margin="0,0,8,0"
                Visibility="{Binding HasRunningApplications, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔧" 
                          FontSize="12"
                          VerticalAlignment="Center"
                          Margin="0,0,4,0"/>
                <TextBlock Text="{Binding RunningApplicationsCount}"
                          FontSize="10"
                          FontWeight="SemiBold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Индикатор использования памяти -->
        <Border Grid.Column="1"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource OutlineBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="6,3"
                Margin="0,0,8,0"
                Visibility="{Binding HasRunningApplications, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="💾" 
                          FontSize="10"
                          VerticalAlignment="Center"
                          Margin="0,0,3,0"/>
                <TextBlock Text="{Binding FormattedMemoryUsage}"
                          FontSize="9"
                          Foreground="{StaticResource OnSurfaceVariantBrush}"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Кнопка открытия меню -->
        <Button Grid.Column="2"
                Style="{StaticResource CorporateButton}"
                Width="80"
                Height="24"
                Padding="8,2"
                FontSize="9"
                Command="{Binding ShowRunningAppsMenuCommand}"
                Visibility="{Binding HasRunningApplications, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📋" 
                          FontSize="10"
                          VerticalAlignment="Center"
                          Margin="0,0,3,0"/>
                <TextBlock Text="Меню" 
                          FontSize="9"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        
        <!-- Сообщение "нет приложений" -->
        <TextBlock Grid.Column="0" Grid.ColumnSpan="3"
                   Text="Нет запущенных приложений"
                   FontSize="9"
                   Foreground="{StaticResource OnSurfaceVariantBrush}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Visibility="{Binding HasRunningApplications, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>