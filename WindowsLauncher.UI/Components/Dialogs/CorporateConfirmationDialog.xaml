<Window x:Class="WindowsLauncher.UI.Components.Dialogs.CorporateConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Подтверждение"
        Width="450"
        Height="250"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="{StaticResource CorporateWhite}"
            CornerRadius="8"
            Effect="{StaticResource MaterialDesignShadowDepth3}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>   <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="80"/>   <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header with corporate gradient -->
            <Border Grid.Row="0"
                    Background="{StaticResource CorporateHeaderGradient}"
                    CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <TextBlock Grid.Column="0"
                               Text="{Binding DialogTitle}"
                               Style="{StaticResource CorporateTitle}"
                               VerticalAlignment="Center"
                               Margin="24,0,0,0"/>
                    
                    <!-- Close button -->
                    <Button Grid.Column="1"
                            Name="CloseButton"
                            Click="CloseButton_Click"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="40"
                            Height="40"
                            Margin="0,0,8,0"
                            Foreground="White"
                            ToolTip="Закрыть">
                        <md:PackIcon Kind="Close" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content area -->
            <Grid Grid.Row="1" Margin="24,20,24,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Icon and main message -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <md:PackIcon Name="DialogIcon"
                                 Kind="AlertCircleOutline"
                                 Width="32"
                                 Height="32"
                                 Foreground="{StaticResource CorporateRed}"
                                 VerticalAlignment="Top"
                                 Margin="0,0,16,0"/>
                    
                    <TextBlock Name="MessageTextBlock"
                               Text="{Binding DialogMessage}"
                               Style="{StaticResource CorporateBodyText}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               LineHeight="22"/>
                </StackPanel>

                <!-- Additional details (if needed) -->
                <TextBlock Grid.Row="1"
                           Name="DetailsTextBlock"
                           Text="{Binding DialogDetails}"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{StaticResource MaterialDesignBodyLight}"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasDetails, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="48,0,0,0"/>
            </Grid>

            <!-- Action buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="24,0,24,20">
                
                <Button Name="CancelButton"
                        Click="CancelButton_Click"
                        Style="{StaticResource CorporateButtonSecondary}"
                        Content="{Binding CancelButtonText}"
                        Width="100"
                        Height="36"
                        Margin="0,0,12,0"/>
                
                <Button Name="ConfirmButton"
                        Click="ConfirmButton_Click"
                        Style="{StaticResource CorporateButton}"
                        Content="{Binding ConfirmButtonText}"
                        Width="100"
                        Height="36"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>