    <!-- Кнопки панели инструментов с Material Design иконками -->
    <Style x:Key="CorporateToolbarButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,6,8,6"/>
        <Setter Property="Margin" Value="2,0,2,0"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="3"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource CorporateGray}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource CorporateGrayDark}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Меню в корпоративном стиле -->
    <Style x:Key="CorporateMenu" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource MaterialDesignPaper}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- MenuItem в корпоративном стиле -->
    <Style x:Key="CorporateMenuItem" TargetType="MenuItem">
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="12,6"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CorporateGray}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource CorporateGrayDark}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- StatusBar в корпоративном стиле -->
    <Style x:Key="CorporateStatusBar" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource MaterialDesignPaper}"/>
        <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <!-- ToolBarTray в корпоративном стиле -->
    <Style x:Key="CorporateToolBarTray" TargetType="ToolBarTray">
        <Setter Property="Background" Value="{StaticResource MaterialDesignPaper}"/>
    </Style>

    <!-- ToolBar в корпоративном стиле -->
    <Style x:Key="CorporateToolBar" TargetType="ToolBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- RichTextBox в корпоративном стиле -->
    <Style x:Key="CorporateRichTextBox" TargetType="RichTextBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
        <Setter Property="Background" Value="{StaticResource CorporateWhite}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CorporateBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="SelectionBrush" Value="{StaticResource PrimaryHueMidBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsReadOnly" Value="True">
                <Setter Property="Background" Value="Lavender"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Separator в корпоративном стиле -->
    <Style x:Key="CorporateSeparator" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource OutlineBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="4,2"/>
    </Style>

    <!-- Стиль для Material Design иконок -->
    <Style x:Key="MaterialIcon" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource CorporateText}"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для иконок в кнопках панели инструментов -->
    <Style x:Key="ToolbarIcon" TargetType="Path" BasedOn="{StaticResource MaterialIcon}">
        <Setter Property="Fill" Value="{StaticResource CorporateTextLight}"/>
    </Style>

    <!-- Стиль для иконок в меню -->
    <Style x:Key="MenuIcon" TargetType="Path" BasedOn="{StaticResource MaterialIcon}">
        <Setter Property="Fill" Value="{StaticResource CorporateTextLight}"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

</ResourceDictionary>