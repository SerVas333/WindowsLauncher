<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:icons="clr-namespace:WindowsLauncher.UI.Infrastructure.Icons"
                    xmlns:converters="clr-namespace:WindowsLauncher.UI.Converters"
                    xmlns:controls="clr-namespace:WindowsLauncher.UI.Controls">

    <!-- =============================================== -->
    <!-- КОНВЕРТЕРЫ -->
    <!-- =============================================== -->
    
    <!-- FontAwesome конвертеры -->
    <icons:EmojiToFontAwesomeConverter x:Key="EmojiToFontAwesomeConverter"/>
    <icons:EmojiToFontAwesome32Converter x:Key="EmojiToFontAwesome32Converter"/>
    
    <!-- UI конвертеры -->
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
    <converters:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter"/>
    <converters:RoleToVisibilityConverter x:Key="RoleToVisibilityConverter"/>
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    
    <!-- Простые boolean конвертеры для SMTP UI -->
    <converters:NotEqualToBooleanConverter x:Key="InverseBooleanConverter"/>

    <!-- =============================================== -->
    <!-- TOUCH MODE КОНФИГУРАЦИЯ -->
    <!-- =============================================== -->
    
    <!-- Touch Mode - увеличенные размеры для сенсорных терминалов -->
    <sys:Double x:Key="TouchModeScale" xmlns:sys="clr-namespace:System;assembly=mscorlib">1.2</sys:Double>
    <sys:Double x:Key="TouchModeButtonMinSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">48</sys:Double>
    <sys:Double x:Key="TouchModeFontSizeMultiplier" xmlns:sys="clr-namespace:System;assembly=mscorlib">1.1</sys:Double>
    
    <!-- Touch Mode - размеры иконок -->
    <sys:Double x:Key="TouchModeIconSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">18</sys:Double>
    <sys:Double x:Key="TouchModeIconNormal" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="TouchModeIconLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>
    <sys:Double x:Key="TouchModeIconExtraLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">40</sys:Double>

    <!-- =============================================== -->
    <!-- КОРПОРАТИВНЫЕ ЦВЕТА -->
    <!-- =============================================== -->
    
    

    <!-- Primary Colors -  KDV -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#C41E3A"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#A01729"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E8324F"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>

        
    <!-- Дополнительные цвета -->
    <SolidColorBrush x:Key="CorporateGrayBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="CorporateGrayLightBrush" Color="#ADB5BD"/>
    <SolidColorBrush x:Key="CorporateGrayDarkBrush" Color="#495057"/>
    <SolidColorBrush x:Key="CorporateWhite" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CorporateText" Color="#333333"/>
    <SolidColorBrush x:Key="CorporateTextLight" Color="#666666"/>
    <SolidColorBrush x:Key="CorporateTextMuted" Color="#999999"/>

    <!-- Расширенная градация серого -->
    <SolidColorBrush x:Key="CorporateGray50" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="CorporateGray100" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="CorporateGray200" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="CorporateGray300" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="CorporateGray400" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="CorporateGray500" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="CorporateGray600" Color="#757575"/>
    <SolidColorBrush x:Key="CorporateGray700" Color="#616161"/>
    <SolidColorBrush x:Key="CorporateGray800" Color="#424242"/>
    <SolidColorBrush x:Key="CorporateGray900" Color="#212121"/>

    <!-- Surface Colors -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#333333"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#666666"/>

    <!-- Функциональные цвета -->
    
    <SolidColorBrush x:Key="DangerBrush" Color="#DC3545"/>
    
    <!-- Нейтральные цвета -->
    <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OffWhiteBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="MediumGrayBrush" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="#343A40"/>
    <SolidColorBrush x:Key="BlackBrush" Color="#000000"/>
    
    <!-- Цвета текста -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212529"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#868E96"/>
    <SolidColorBrush x:Key="WhiteTextBrush" Color="#FFFFFF"/>

    <!-- State Colors -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="#FFCDD2"/>
    <SolidColorBrush x:Key="OnErrorBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="OnSuccessBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="OnWarningBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="OnInfoBrush" Color="#FFFFFF"/>
    
    <!-- Информационные блоки для SMTP UI -->
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="InfoBorderBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="InfoTextBrush" Color="#1565C0"/>

    <!-- Disabled/Hint Colors -->
    <SolidColorBrush x:Key="DisabledBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="HintBrush" Color="#999999"/>

    <!-- === ДОПОЛНИТЕЛЬНЫЕ СТИЛИ ДЛЯ TEXTEDITIOR === -->

    <!-- Эмуляция MaterialDesignPaper для фонов меню и панелей -->
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FFFFFF"/>

    <!-- Эмуляция PrimaryHueMidBrush для выделения -->
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#C41E3A"/>

    <!-- Эмуляция SecondaryHueMidBrush для второстепенных элементов -->
    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#666666"/>

    <!-- Эмуляция ValidationErrorBrush для ошибок -->
    <SolidColorBrush x:Key="ValidationErrorBrush" Color="#F44336"/>

    <!-- Полупрозрачные overlay цвета -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#80000000"/>

    <!-- Границы -->
    <SolidColorBrush x:Key="BorderBrush" Color="#DEE2E6"/>

    <!-- Корпоративные тени -->
    <DropShadowEffect x:Key="CorporateShadowDepth1" Color="Black" Direction="270" ShadowDepth="1"  BlurRadius="3" Opacity="0.26"/>
    <DropShadowEffect x:Key="CorporateShadowDepth2" Color="Black" Direction="270" ShadowDepth="2"  BlurRadius="6" Opacity="0.26"/>
    <DropShadowEffect x:Key="CorporateShadowDepth3" Color="Black" Direction="270" ShadowDepth="4"  BlurRadius="8" Opacity="0.26"/>
    <DropShadowEffect x:Key="CorporateShadowDepth4" Color="Black" Direction="270" ShadowDepth="6"  BlurRadius="8" Opacity="0.26"/>

    <!-- Алиасы для совместимости с Material Design терминологией -->
    <SolidColorBrush x:Key="CorporateBodyLight" Color="#999999"/>
    <SolidColorBrush x:Key="CorporateOnSurface" Color="#333333"/>
    <SolidColorBrush x:Key="CorporateSurface" Color="#FFFFFF"/>
    
    
    <!-- =============================================== -->
    <!-- КОРПОРАТИВНЫЕ ШРИФТЫ -->
    <!-- =============================================== -->
    
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas, Monaco, monospace</FontFamily>
    
    <!-- Размеры шрифтов -->
    <sys:Double x:Key="FontSizeSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="FontSizeNormal" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="FontSizeLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="FontSizeHeading" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="FontSizeTitle" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>

    <!-- Текстовые стили -->
    <Style x:Key="CorporateTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateWhite}"/>
    </Style>

    <Style x:Key="CorporateSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateTextLight}"/>
    </Style>

    <Style x:Key="CorporateBodyText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
    </Style>

    <!-- =============================================== -->
    <!-- РАЗМЕРЫ И ОТСТУПЫ -->
    <!-- =============================================== -->
    
    <Thickness x:Key="SmallMargin">4</Thickness>
    <Thickness x:Key="NormalMargin">8</Thickness>
    <Thickness x:Key="LargeMargin">16</Thickness>
    
    <Thickness x:Key="SmallPadding">6,4</Thickness>
    <Thickness x:Key="NormalPadding">12,8</Thickness>
    <Thickness x:Key="LargePadding">20,12</Thickness>
    
    <!-- Радиусы скругления -->
    <CornerRadius x:Key="BorderRadiusSmall">3</CornerRadius>
    <CornerRadius x:Key="BorderRadiusNormal">5</CornerRadius>
    <CornerRadius x:Key="BorderRadiusLarge">8</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">3</CornerRadius>

    <!-- =============================================== -->
    <!-- СТИЛИ КНОПОК -->
    <!-- =============================================== -->
    
    <!-- Основная кнопка -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryDarkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource NormalPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="MinHeight" Value="35"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource BorderRadiusNormal}"
                            SnapsToDevicePixels="true">
                        <ContentPresenter x:Name="contentPresenter" 
                                        Focusable="False" 
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                        Margin="{TemplateBinding Padding}" 
                                        RecognizesAccessKey="True" 
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource PrimaryLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource PrimaryDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource CorporateGrayLightBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Вторичная кнопка -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <!-- Кнопка успеха -->
    <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="BorderBrush" Value="#1E7E34"/>
    </Style>

    <!-- Кнопка опасности -->
    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        <Setter Property="BorderBrush" Value="#BD2130"/>
    </Style>

    <!-- ========== СОВРЕМЕННЫЕ КНОПКИ ========== -->

    <!-- Кнопка только с иконкой (аналог MaterialDesignIconButton) -->
    <Style x:Key="CorporateIconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter x:Name="contentPresenter"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource CorporateGray100}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource CorporateGray200}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Кнопка с иконкой и текстом -->
    <Style x:Key="CorporateIconTextButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter x:Name="contentPresenter"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource CorporateGray100}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource CorporateGray200}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Плавающая кнопка действия (FAB) -->
    <Style x:Key="CorporateFloatingActionButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="56"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Effect" Value="{StaticResource CorporateShadowDepth2}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="28"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter x:Name="contentPresenter"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource PrimaryLightBrush}"/>
                            <Setter Property="Effect" Value="{StaticResource CorporateShadowDepth3}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource PrimaryDarkBrush}"/>
                            <Setter Property="Effect" Value="{StaticResource CorporateShadowDepth1}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource CorporateGray400}"/>
                            <Setter Property="Effect" Value="{x:Null}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!-- =============================================== -->
    <!-- СТИЛИ ТЕКСТОВЫХ ПОЛЕЙ -->
    <!-- =============================================== -->
    
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource SmallPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource BorderRadiusSmall}"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Focusable="false" 
                                    HorizontalScrollBarVisibility="Hidden" 
                                    VerticalScrollBarVisibility="Hidden"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="BorderThickness" TargetName="border" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource LightGrayBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Поле пароля -->
    <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource SmallPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="{StaticResource SmallCornerRadius}"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Focusable="false" 
                                    HorizontalScrollBarVisibility="Hidden" 
                                    VerticalScrollBarVisibility="Hidden"
                                    Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Дублирующие стили для типографики -->
    <Style x:Key="CaptionTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateTextMuted}"/>
        <Setter Property="LineHeight" Value="16"/>
    </Style>

    <Style x:Key="BodyTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <Style x:Key="TitleTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource CorporateWhite}"/>
    </Style>

    <Style x:Key="SubtitleTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}"/>
    </Style>

    <Style x:Key="Headline1TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="LineHeight" Value="40"/>
    </Style>

    <Style x:Key="Headline2TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="LineHeight" Value="36"/>
    </Style>

    <Style x:Key="Headline3TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="LineHeight" Value="32"/>
    </Style>

    <Style x:Key="OverlineTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
        <Setter Property="LineHeight" Value="14"/>
    </Style>


    <!-- =============================================== -->
    <!-- СТИЛИ ВЫПАДАЮЩИХ СПИСКОВ -->
    <!-- =============================================== -->
    
    <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource SmallPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition MinWidth="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}" Width="0"/>
                        </Grid.ColumnDefinitions>
                        <Popup x:Name="PART_Popup" 
                               AllowsTransparency="true" 
                               Grid.ColumnSpan="2" 
                               IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                               Margin="1" 
                               PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}" 
                               Placement="Bottom">
                            <Border x:Name="dropDownBorder" 
                                    Background="{StaticResource WhiteBrush}" 
                                    BorderBrush="{StaticResource MediumGrayBrush}" 
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource BorderRadiusSmall}">
                                <ScrollViewer x:Name="DropDownScrollViewer">
                                    <ItemsPresenter x:Name="ItemsPresenter" 
                                                  KeyboardNavigation.DirectionalNavigation="Contained" 
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                        <ToggleButton x:Name="toggleButton" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Grid.ColumnSpan="2" 
                                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="OverridesDefaultStyle" Value="true"/>
                                    <Setter Property="IsTabStop" Value="false"/>
                                    <Setter Property="Focusable" Value="false"/>
                                    <Setter Property="ClickMode" Value="Press"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="templateRoot" 
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="{StaticResource BorderRadiusSmall}" 
                                                        SnapsToDevicePixels="true">
                                                    <Border x:Name="splitBorder" 
                                                            BorderBrush="Transparent" 
                                                            BorderThickness="1" 
                                                            HorizontalAlignment="Right" 
                                                            Margin="0" 
                                                            SnapsToDevicePixels="true" 
                                                            Width="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}">
                                                        <Path x:Name="arrow" 
                                                              Data="F1 M 0,0 L 2.667,2.66665 L 5.3334,0 L 5.3334,-1.78168 L 2.6667,0.88501 L0,-1.78168 L0,0 Z" 
                                                              Fill="{StaticResource CorporateGrayBrush}" 
                                                              HorizontalAlignment="Center" 
                                                              Margin="0" 
                                                              VerticalAlignment="Center"/>
                                                    </Border>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter Property="BorderBrush" TargetName="templateRoot" Value="{StaticResource PrimaryLightBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="true">
                                                        <Setter Property="BorderBrush" TargetName="templateRoot" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <ContentPresenter x:Name="contentPresenter" 
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                        Content="{TemplateBinding SelectionBoxItem}" 
                                        ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}" 
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                        IsHitTestVisible="false" 
                                        Margin="{TemplateBinding Padding}" 
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- СТИЛИ ФЛАЖКОВ -->
    <!-- =============================================== -->
    
    <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid x:Name="templateRoot" Background="Transparent" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="checkBoxBorder" 
                                Background="{StaticResource WhiteBrush}" 
                                BorderBrush="{StaticResource MediumGrayBrush}" 
                                BorderThickness="1" 
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                Margin="1" 
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Width="18" Height="18"
                                CornerRadius="{StaticResource BorderRadiusSmall}">
                            <Grid x:Name="markGrid">
                                <Path x:Name="optionMark" 
                                      Data="F1 M 9.97498,1.22334L 4.6983,9.09834L 4.52164,9.09834L 0,5.19331L 1.27664,3.52165L 4.255,6.08833L 8.33331,1.52588e-005L 9.97498,1.22334 Z" 
                                      Fill="{StaticResource PrimaryBrush}" 
                                      Margin="1" 
                                      Opacity="0" 
                                      Stretch="None"/>
                            </Grid>
                        </Border>
                        <ContentPresenter x:Name="contentPresenter" 
                                        Grid.Column="1" 
                                        Focusable="False" 
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                        Margin="{TemplateBinding Padding}" 
                                        RecognizesAccessKey="True" 
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Opacity" TargetName="optionMark" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder" Value="{StaticResource PrimaryLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="checkBoxBorder" Value="{StaticResource LightGrayBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- СТИЛИ ТЕКСТОВЫХ БЛОКОВ -->
    <!-- =============================================== -->
    
    <!-- Заголовок -->
    <Style x:Key="HeadingTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeading}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Margin" Value="{StaticResource NormalMargin}"/>
    </Style>

    <!-- Подзаголовок -->
    <Style x:Key="SubHeadingTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
    </Style>

    <!-- Обычный текст -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Мелкий текст -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
    </Style>

    <!-- =============================================== -->
    <!-- СТИЛИ ОКОН -->
    <!-- =============================================== -->
    
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource OffWhiteBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CornerRadius="0" 
                            GlassFrameThickness="1" 
                            UseAeroCaptionButtons="False" 
                            NonClientFrameEdges="None"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- СТИЛИ ПАНЕЛЕЙ И КОНТЕЙНЕРОВ -->
    <!-- =============================================== -->
    
    <!-- Карточка -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusNormal}"/>
        <Setter Property="Padding" Value="{StaticResource LargePadding}"/>
        <Setter Property="Margin" Value="{StaticResource NormalMargin}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="2" 
                                Direction="270" 
                                Opacity="0.1" 
                                Color="#000000"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Группа -->
    <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource NormalPadding}"/>
        <Setter Property="Margin" Value="{StaticResource NormalMargin}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid SnapsToDevicePixels="true">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="6"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="6"/>
                        </Grid.RowDefinitions>
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="{StaticResource BorderRadiusNormal}" 
                                Grid.Column="0" 
                                Grid.ColumnSpan="4" 
                                Grid.Row="1" 
                                Grid.RowSpan="3"/>
                        <ContentPresenter Grid.Column="1" 
                                        Grid.Row="0" 
                                        Margin="4,0,4,0" 
                                        ContentSource="Header" 
                                        RecognizesAccessKey="True" 
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        <ContentPresenter Grid.Column="1" 
                                        Grid.ColumnSpan="2" 
                                        Grid.Row="2" 
                                        Margin="{TemplateBinding Padding}" 
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- СТИЛИ ИНДИКАТОРА ПРОГРЕССА -->
    <!-- =============================================== -->
    
    <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource BorderRadiusNormal}">
                        <Grid x:Name="PART_Track">
                            <Border x:Name="PART_Indicator" 
                                    Background="{TemplateBinding Foreground}" 
                                    HorizontalAlignment="Left"
                                    CornerRadius="{StaticResource BorderRadiusNormal}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- FONTAWESOME ИКОНКИ СТИЛИ -->
    <!-- =============================================== -->
    
    <!-- Базовый стиль для FontAwesome иконок -->
    <Style x:Key="FontAwesomeIconBase" TargetType="fa:ImageAwesome">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Размеры иконок -->
    <Style x:Key="FontAwesomeIconSmall" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
    </Style>

    <Style x:Key="FontAwesomeIconNormal" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
    </Style>

    <Style x:Key="FontAwesomeIconLarge" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style x:Key="FontAwesomeIconExtraLarge" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
    </Style>

    <!-- Корпоративные цвета для иконок -->
    <Style x:Key="FontAwesomeIconPrimary" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
    </Style>

    <Style x:Key="FontAwesomeIconSuccess" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
    </Style>

    <Style x:Key="FontAwesomeIconWarning" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
    </Style>

    <Style x:Key="FontAwesomeIconDanger" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
    </Style>

    <Style x:Key="FontAwesomeIconInfo" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource InfoBrush}"/>
    </Style>

    <Style x:Key="FontAwesomeIconWhite" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource WhiteTextBrush}"/>
    </Style>

    <Style x:Key="FontAwesomeIconSecondary" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
    </Style>

    <!-- Touch Mode иконки -->
    <Style x:Key="FontAwesomeIconTouch" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="{DynamicResource TouchModeIconNormal}"/>
        <Setter Property="Height" Value="{DynamicResource TouchModeIconNormal}"/>
    </Style>

    <Style x:Key="FontAwesomeIconTouchLarge" TargetType="fa:ImageAwesome" BasedOn="{StaticResource FontAwesomeIconBase}">
        <Setter Property="Width" Value="{DynamicResource TouchModeIconLarge}"/>
        <Setter Property="Height" Value="{DynamicResource TouchModeIconLarge}"/>
    </Style>

    <!-- =============================================== -->
    <!-- КНОПКИ С FONTAWESOME ИКОНКАМИ -->
    <!-- =============================================== -->

    <!-- Кнопка с иконкой - основная -->
    <Style x:Key="FontAwesomeButtonPrimary" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- Кнопка с иконкой - вторичная -->
    <Style x:Key="FontAwesomeButtonSecondary" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- Touch Mode кнопки -->
    <Style x:Key="FontAwesomeButtonTouch" TargetType="Button" BasedOn="{StaticResource FontAwesomeButtonPrimary}">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="MinWidth" Value="{DynamicResource TouchModeButtonMinSize}"/>
        <Setter Property="MinHeight" Value="{DynamicResource TouchModeButtonMinSize}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- Навигационные кнопки без Padding и вытянутые горизонтально -->
    <Style x:Key="HelpNavigationButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter x:Name="contentPresenter"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Focusable="False"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource CorporateGray200}"/>
                            <Setter Property="Foreground" Value="{StaticResource CorporateGray500}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- ТЕМПЛЕЙТЫ ДЛЯ ИКОНОК С ТЕКСТОМ -->
    <!-- =============================================== -->

    <!-- Темплейт: Иконка + Текст (горизонтально) -->
    <DataTemplate x:Key="IconTextHorizontalTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <ContentPresenter Content="{Binding IconText, Converter={StaticResource EmojiToFontAwesomeConverter}, ConverterParameter=16:PrimaryBrush}" 
                            Margin="0,0,8,0"/>
            <TextBlock Text="{Binding Text}" VerticalAlignment="Center"/>
        </StackPanel>
    </DataTemplate>

    <!-- Темплейт: Иконка + Текст (вертикально) -->
    <DataTemplate x:Key="IconTextVerticalTemplate">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <ContentPresenter Content="{Binding IconText, Converter={StaticResource EmojiToFontAwesomeConverter}, ConverterParameter=20:PrimaryBrush}" 
                            HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <TextBlock Text="{Binding Text}" HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>
    </DataTemplate>

    <!-- Темплейт: Только иконка -->
    <DataTemplate x:Key="IconOnlyTemplate">
        <ContentPresenter Content="{Binding IconText, Converter={StaticResource EmojiToFontAwesomeConverter}, ConverterParameter=16:PrimaryBrush}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </DataTemplate>

    <!-- =============================================== -->
    <!-- СТИЛИ РАДИО-КНОПОК -->
    <!-- =============================================== -->
    
    <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid x:Name="templateRoot" Background="Transparent" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="radioButtonBorder" 
                                Background="{StaticResource WhiteBrush}" 
                                BorderBrush="{StaticResource MediumGrayBrush}" 
                                BorderThickness="1" 
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                Margin="1" 
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Width="18" Height="18"
                                CornerRadius="9">
                            <Grid x:Name="markGrid">
                                <Ellipse x:Name="optionMark" 
                                        Fill="{StaticResource PrimaryBrush}" 
                                        Margin="3" 
                                        Opacity="0"/>
                            </Grid>
                        </Border>
                        <ContentPresenter x:Name="contentPresenter" 
                                        Grid.Column="1" 
                                        Focusable="False" 
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                        Margin="{TemplateBinding Padding}" 
                                        RecognizesAccessKey="True" 
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasContent" Value="true">
                            <Setter Property="Margin" TargetName="contentPresenter" Value="4,-1,0,0"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="BorderBrush" TargetName="radioButtonBorder" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Opacity" TargetName="optionMark" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Opacity" TargetName="templateRoot" Value="0.56"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- СТИЛИ МЕНЮ И ПАНЕЛЕЙ ИНСТРУМЕНТОВ -->
    <!-- =============================================== -->
    
    <!-- Стиль для Menu -->
    <Style x:Key="MenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    </Style>

    <!-- Стиль для MenuItem -->
    <Style x:Key="MenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для иконок в меню -->
    <Style x:Key="MenuIcon" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <!-- Стиль для иконок в панели инструментов -->
    <Style x:Key="ToolbarIcon" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <!-- Стиль для меток (labels) -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- =============================================== -->
    <!-- ICON DATA ДЛЯ TEXTEDITOR -->
