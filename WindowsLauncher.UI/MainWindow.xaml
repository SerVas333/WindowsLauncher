<Window x:Class="WindowsLauncher.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WindowsLauncher.UI"       
        Title="{Binding WindowTitle}" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок категорий -->
        <Style x:Key="CategoryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стили для карточек приложений -->
        <Style x:Key="AppCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="4" BlurRadius="8" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для поля поиска -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="20">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="16,8"
                                            VerticalAlignment="Center"/>
                                <TextBlock Text="{local:Localize SearchPlaceholder}" 
                                         Foreground="#999999"
                                         Margin="16,8"
                                         VerticalAlignment="Center"
                                         IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Конвертеры для Visibility -->
        <local:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Categories -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="40"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="40" Height="40" Fill="#FFC107" Margin="0,0,16,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{local:Localize AppTitle}" 
                                   FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="12" Foreground="#E3F2FD"/>
                    </StackPanel>
                </StackPanel>

                <!-- Search Box -->
                <TextBox Grid.Column="1" 
                         Style="{StaticResource SearchTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Margin="20,0"
                         FontSize="14"/>

                <!-- User Info and Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Margin="0,0,20,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentUser.DisplayName}" 
                                   FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding LocalizedRole}" 
                                   FontSize="11" Foreground="#E3F2FD"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>

                    <!-- Language Switcher -->
                    <ComboBox x:Name="LanguageComboBox" 
                              Width="60" Height="30" 
                              Margin="4"
                              SelectedIndex="0"
                              SelectionChanged="LanguageComboBox_SelectionChanged">
                        <ComboBoxItem Content="🇷🇺" Tag="ru-RU"/>
                        <ComboBoxItem Content="🇺🇸" Tag="en-US"/>
                    </ComboBox>

                    <Button Content="{local:Localize SwitchUser}" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding SwitchUserCommand}"
                            Background="#FF9800"/>

                    <Button Content="{local:Localize Settings}" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding OpenSettingsCommand}"/>

                    <Button Content="{local:Localize Refresh}" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding RefreshCommand}"/>

                    <Button Content="{local:Localize Logout}" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding LogoutCommand}"
                            Background="#F44336"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Categories -->
        <Border Grid.Row="1" Background="White" Padding="20,10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding LocalizedCategories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayName}" 
                                    Style="{StaticResource CategoryButton}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, 
                                            Path=DataContext.SelectCategoryCommand}"
                                    CommandParameter="{Binding Key}"
                                    Margin="0,0,8,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" Padding="20" Background="#F5F5F5">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="🔄" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <TextBlock.RenderTransform>
                            <RotateTransform/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                       From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="{local:Localize LoadingApplications}" 
                               FontSize="16" Foreground="#666666"/>
                </StackPanel>

                <!-- Applications Grid -->
                <ItemsControl ItemsSource="{Binding FilteredApplications}"
                             Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AppCard}" Width="200" Height="160">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- App Icon -->
                                    <Border Grid.Row="0" Width="48" Height="48" 
                                           Background="#E3F2FD" CornerRadius="8"
                                           HorizontalAlignment="Center" Margin="0,0,0,12">
                                        <TextBlock Text="{Binding IconText}" FontSize="24" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- App Info -->
                                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="Bold" FontSize="14"
                                                  TextAlignment="Center" TextWrapping="Wrap"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="11" Foreground="#666666"
                                                  TextAlignment="Center" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- Category Badge -->
                                    <Border Grid.Row="2" Background="#FF9800" CornerRadius="10"
                                           Padding="8,2" HorizontalAlignment="Center" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding LocalizedCategory}" FontSize="10" 
                                                  Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>

                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, 
                                                        Path=DataContext.LaunchApplicationCommand}"
                                                CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- No Applications Message -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding HasNoApplications, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="📂" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="{local:Localize NoApplicationsFound}" FontSize="18" Foreground="#666666"/>                    
                    <TextBlock Text="{local:Localize NoApplicationsHint}" FontSize="12" Foreground="#999999" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#EEEEEE" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" FontSize="12"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ApplicationCount}" FontSize="12" Foreground="#666666"/>
                    <TextBlock Text=" " FontSize="12" Foreground="#666666"/>
                    <TextBlock Text="{local:Localize Apps}" FontSize="12" Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>