{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "WindowsLauncher": "Verbose",
      "WindowsLauncher.Services.Lifecycle.Launchers.WSAApplicationLauncher": "Verbose",
      "WindowsLauncher.Services.Lifecycle.Windows.WindowManager": "Verbose",
      "WindowsLauncher.Services.Android": "Verbose"
    },
    "Console": {
      "LogLevel": {
        "Default": "Debug",
        "WindowsLauncher": "Verbose"
      },
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff "
    },
    "File": {
      "LogLevel": {
        "Default": "Debug",
        "WindowsLauncher": "Verbose"
      },
      "Path": "C:\\WindowsLauncher\\Logs\\app-dev-{Date}.log",
      "MaxFileSize": "100MB",
      "MaxFiles": 5,
      "RollingInterval": "Hour",
      "RetainedFileCountLimit": 24,
      "IncludeScopes": true
    },
    "WSAJsonFile": {
      "LogLevel": {
        "WindowsLauncher.Services.Lifecycle.Launchers.WSAApplicationLauncher": "Verbose",
        "WindowsLauncher.Services.Lifecycle.Windows.WindowManager": "Verbose",
        "WindowsLauncher.Services.Android": "Verbose"
      },
      "Path": "C:\\WindowsLauncher\\Logs\\wsa-dev-{Date}.json",
      "MaxFileSize": "50MB",
      "MaxFiles": 3,
      "RollingInterval": "Hour",
      "IncludeScopes": true
    },
    "DebugFile": {
      "LogLevel": {
        "Default": "Verbose"
      },
      "Path": "C:\\WindowsLauncher\\Logs\\debug-dev-{Date}.log",
      "MaxFileSize": "200MB",
      "MaxFiles": 2,
      "RollingInterval": "Hour",
      "IncludeScopes": true,
      "Enabled": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "WindowsLauncher": "Verbose",
        "WindowsLauncher.Services.Lifecycle.Launchers.WSAApplicationLauncher": "Verbose",
        "WindowsLauncher.Services.Lifecycle.Windows.WindowManager": "Verbose",
        "WindowsLauncher.Services.Android": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\WindowsLauncher\\Logs\\app-dev-.log",
          "rollingInterval": "Hour",
          "retainedFileCountLimit": 24,
          "fileSizeLimitBytes": 104857600,
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\WindowsLauncher\\Logs\\wsa-dev-.json",
          "rollingInterval": "Hour",
          "retainedFileCountLimit": 24,
          "fileSizeLimitBytes": 52428800,
          "shared": true,
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
  },
  "AndroidSubsystem": {
    "Mode": "OnDemand",
    "PreloadDelaySeconds": 5,
    "AutoStartWSA": true,
    "ShowStatusInUI": true,
    "EnableDiagnostics": true,
    "ResourceOptimization": {
      "MaxMemoryMB": 4096,
      "StopWSAOnIdle": false,
      "IdleTimeoutMinutes": 15
    },
    "Fallback": {
      "DisableOnLowMemory": false,
      "MemoryThresholdMB": 2048
    }
  },
  "ChromeWindowSearch": {
    "MaxEnumCount": 200,
    "MaxEnumTimeSeconds": 30,
    "MaxTitleLength": 1000,
    "SearchTimeoutSeconds": 30,
    "MaxDiagnosticWindows": 100
  },
  "Performance": {
    "EnableCaching": true,
    "CacheExpirationMinutes": 5,
    "MaxCacheSize": "200MB",
    "PreloadApplications": false,
    "LazyLoadIcons": false,
    "DatabaseConnectionPoolSize": 20
  },
  "Features": {
    "EnableApplicationGroups": true,
    "EnableApplicationSearch": true,
    "EnableApplicationStatistics": true,
    "EnableUserPreferences": true,
    "EnableApplicationScheduling": true,
    "EnableRemoteApplications": true,
    "EnableApplicationSharing": true,
    "EnableWSADiagnostics": true,
    "EnablePerformanceMetrics": true
  }
}