<!-- WindowsLauncher.UI/Controls/LocalUserCard.xaml -->
<UserControl x:Class="WindowsLauncher.UI.Controls.LocalUserCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WindowsLauncher.UI.Converters"
             MinHeight="80">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:FirstLetterValueConverter x:Key="FirstLetterConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <!-- Стиль для статуса пользователя -->
        <Style x:Key="UserStatusDot" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Fill" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsActive}" Value="False">
                    <Setter Property="Fill" Value="{StaticResource CorporateRed}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsLocked}" Value="True">
                    <Setter Property="Fill" Value="Orange"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для роли пользователя -->
        <Style x:Key="UserRoleBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="4,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Role}" Value="Administrator">
                    <Setter Property="Background" Value="{StaticResource CorporateRed}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="PowerUser">
                    <Setter Property="Background" Value="{StaticResource CorporateRedLight}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="Standard">
                    <Setter Property="Background" Value="{StaticResource CorporateGrayDark}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль текста роли -->
        <Style x:Key="UserRoleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Role}" Value="Administrator">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Text" Value="АДМИН"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="PowerUser">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Text" Value="ОПЫТНЫЙ"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Role}" Value="Standard">
                    <Setter Property="Foreground" Value="{StaticResource CorporateText}"/>
                    <Setter Property="Text" Value="ОБЫЧНЫЙ"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Основная карточка пользователя -->
    <Border Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource OutlineBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="4,2"
            Padding="16,12">
        
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                        <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>     <!-- Аватар/Статус -->
                <ColumnDefinition Width="*"/>      <!-- Основная информация -->
                <ColumnDefinition Width="Auto"/>   <!-- Роль -->
                <ColumnDefinition Width="Auto"/>   <!-- Действия -->
            </Grid.ColumnDefinitions>

            <!-- Аватар и статус -->
            <Grid Grid.Column="0">
                <!-- Аватар-заглушка -->
                <Border Width="32" Height="32" 
                        Background="{StaticResource CorporateRed}"
                        CornerRadius="16">
                    <TextBlock Text="{Binding Username, Converter={StaticResource FirstLetterConverter}}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Индикатор статуса -->
                <Ellipse Style="{StaticResource UserStatusDot}"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Margin="0,0,-2,-2"/>
            </Grid>

            <!-- Основная информация о пользователе -->
            <StackPanel Grid.Column="1" Margin="12,0,8,0" VerticalAlignment="Center">
                <!-- Имя пользователя -->
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource CorporateText}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <!-- Если DisplayName пустой, показываем Username -->
                                <DataTrigger Binding="{Binding DisplayName}" Value="">
                                    <Setter Property="Text" Value="{Binding Username}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DisplayName}" Value="{x:Null}">
                                    <Setter Property="Text" Value="{Binding Username}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Логин (всегда показываем если есть DisplayName) -->
                <TextBlock Text="{Binding Username, StringFormat='@{0}'}"
                           FontSize="12"
                           Foreground="{StaticResource CorporateTextLight}"
                           Margin="0,2,0,0"
                           Visibility="{Binding DisplayName, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Email -->
                <TextBlock Text="{Binding Email}"
                           FontSize="11"
                           Foreground="{StaticResource CorporateTextLight}"
                           Margin="0,1,0,0"
                           Visibility="{Binding Email, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Дополнительная информация (последний вход, статусы) -->
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <!-- Последний вход -->
                    <TextBlock FontSize="10"
                               Foreground="{StaticResource HintBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LastLoginAt}" Value="{x:Null}">
                                        <Setter Property="Text" Value="Никогда не входил"/>
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Text" Value="{Binding LastLoginAt, StringFormat='Вход: {0:dd.MM.yyyy}'}"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Индикатор блокировки -->
                    <Border Background="{StaticResource WarningBrush}"
                            CornerRadius="8"
                            Padding="6,2"
                            Margin="8,0,0,0"
                            Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisConverter}}">
                        <TextBlock Text="ЗАБЛОКИРОВАН"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Роль пользователя -->
            <Border Grid.Column="2" 
                    Style="{StaticResource UserRoleBadge}"
                    VerticalAlignment="Top"
                    Margin="0,0,8,0">
                <TextBlock Style="{StaticResource UserRoleText}"/>
            </Border>

            <!-- Кнопки действий -->
            <StackPanel Grid.Column="3" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                
                <!-- Редактировать -->
                <Button Style="{StaticResource CorporateButtonSecondary}"
                        ToolTip="Редактировать пользователя"
                        Padding="8,6"
                        Margin="2,0"
                        Command="{Binding DataContext.EditLocalUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}">
                    <TextBlock Text="✏️" FontSize="12"/>
                </Button>

                <!-- Сбросить пароль -->
                <Button Style="{StaticResource CorporateButtonSecondary}"
                        ToolTip="Сбросить пароль"
                        Padding="8,6"
                        Margin="2,0"
                        Command="{Binding DataContext.ResetUserPasswordCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}">
                    <TextBlock Text="🔑" FontSize="12"/>
                </Button>

                <!-- Переключить активность -->
                <Button Padding="8,6"
                        Margin="2,0"
                        Command="{Binding DataContext.ToggleUserActiveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource CorporateButtonSecondary}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                    <Setter Property="ToolTip" Value="Деактивировать пользователя"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                    <Setter Property="ToolTip" Value="Активировать пользователя"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="Text" Value="⏸️"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                        <Setter Property="Text" Value="▶️"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>

                <!-- Удалить -->
                <Button ToolTip="Удалить пользователя"
                        Padding="8,6"
                        Margin="2,0"
                        Command="{Binding DataContext.DeleteLocalUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource CorporateButtonSecondary}">
                            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="🗑️" FontSize="12"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>